---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import type { CallToAction as Props } from '~/types';

const {
  variant = 'secondary',
  target,
  text = Astro.slots.render('default'),
  icon = '',
  class: className = '',
  type,
  ...rest
} = Astro.props;

const href = (rest as any)?.href as string | undefined;
const isWhatsapp = typeof href === 'string' && href.includes('wa.me');
const whatsappClass =
  'bg-emerald-500 text-white border border-emerald-500 hover:bg-transparent hover:text-emerald-600 hover:border-emerald-500 whitespace-nowrap';
const computedIcon = isWhatsapp ? 'tabler:brand-whatsapp' : icon || '';
const defaultWhatsappNumber = '+41 76 798 27 93';
const displayText = isWhatsapp ? defaultWhatsappNumber : text;

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  tertiary: 'btn btn-tertiary',
  link: 'cursor-pointer hover:text-primary',
};
---

{
  type === 'button' || type === 'submit' || type === 'reset' ? (
    <button type={type} class={twMerge(variants[variant] || '', isWhatsapp ? whatsappClass : '', className)} {...rest}>
      <Fragment set:html={displayText} />
      {computedIcon && <Icon name={computedIcon} class="w-5 h-5 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block" />}
    </button>
  ) : (
    <a
      class={twMerge(variants[variant] || '', isWhatsapp ? whatsappClass : '', className)}
      {...(target ? { target: target, rel: 'noopener noreferrer' } : {})}
      {...rest}
    >
      <Fragment set:html={displayText} />
      {computedIcon && <Icon name={computedIcon} class="w-5 h-5 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block" />}
    </a>
  )
}
