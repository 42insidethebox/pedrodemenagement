---
import Modal from '~/components/ui/Modal.astro';

type Tier = {
  label: string;
  price: string;
  features: string[];
  href: string;
  primary?: boolean;
  info?: string[]; // optional tooltip bullets (max 3 recommended)
};

export interface Props {
  id: string;
  triggerText: string;
  title: string;
  subtitle?: string;
  tiers: Tier[];
  footnote?: string;
  ctaText?: string;
}

const { id, triggerText, title, subtitle = '', tiers = [], footnote = '', ctaText = 'Choose' } = Astro.props as Props;
---

{triggerText ? <a class="btn btn-primary" href={`#${id}`}>{triggerText}</a> : ''}

<Modal id={id} title={title} subtitle={subtitle}>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    {tiers.map((t) => (
      <div class:list={[
        'relative rounded-lg border border-gray-200 dark:border-gray-700 p-4 bg-white dark:bg-slate-900',
        t.primary ? 'ring-2 ring-primary' : '',
      ]}>
        <div class="flex items-baseline justify-start">
          <h4 class="text-xl font-semibold text-primary">{t.label}</h4>
          {t.info && t.info.length ? (
            <div class="ml-2 relative inline-block group">
              <button type="button" class="inline-flex items-center justify-center w-5 h-5 rounded-full border border-gray-300 text-[11px] leading-none text-gray-600 dark:text-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" aria-label="Info" tabindex="0">
                i
              </button>
              <div class="absolute z-30 hidden group-hover:block group-focus-within:block right-0 top-full mt-2 w-64 rounded-md border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 p-3 text-sm shadow-xl pointer-events-none">
                <ul class="space-y-1">
                  {t.info.slice(0, 3).map((s) => (
                    <li>• {s}</li>
                  ))}
                </ul>
              </div>
            </div>
          ) : ''}
        </div>
        <ul class="mt-3 space-y-2 text-sm">
          {t.features.map((f) => (
            <li>• {f}</li>
          ))}
        </ul>
        <div class="mt-4">
          <a class:list={[t.primary ? 'btn btn-primary' : 'btn']} href={t.href}>{ctaText}</a>
        </div>
      </div>
    ))}
  </div>
  {footnote && <p class="mt-4 text-sm text-muted">{footnote}</p>}
</Modal>
