---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
<div
  class="relative overflow-hidden py-20
         [&_h1]:text-blue-500
         [&_h2]:text-blue-500
         [&_p]:text-white
         [&_.tagline]:text-blue-500"
  style="
    background-image:
      linear-gradient(
        to bottom right,
        rgba(15, 23, 42, 0.55),
        rgba(30, 41, 59, 0.50),
        rgba(2, 6, 23, 0.40)
      ),
      url('https://cdn.midjourney.com/b3fc4c04-1daa-4974-a323-3e514c50c433/0_1.png');
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
  "
>
  <HeroText
    tagline="Contact"
    title="Parlons de votre déménagement"
    subtitle="Un conseiller Pedro Déménagement vous répond sous 24h."
  />
</div>

  <ContactUs
    id="form"
    title="Obtenir un devis"
    subtitle="Indiquez vos adresses, votre volume et la date souhaitée. Nous revenons avec un chiffrage clair."
    inputs={[
      { type: 'text', name: 'name', label: 'Nom et prénom' },
      { type: 'tel', name: 'phone', label: 'Téléphone' },
      { type: 'text', name: 'from', label: 'Adresse de départ' },
      { type: 'text', name: 'to', label: 'Adresse d’arrivée' },
      { type: 'date', name: 'date', label: 'Date souhaitée' },
      {
        type: 'select',
        name: 'size',
        label: 'Taille du logement',
        options: [
          { label: 'Studio / 1 pièce', value: 'studio' },
          { label: '2-3 pièces', value: '2-3' },
          { label: '4 pièces et +', value: '4+' },
          { label: 'Bureau / commerce', value: 'business' },
        ],
      },
    ]}
    textarea={{
      label: 'Détails utiles',
      placeholder: 'Objets lourds, besoin d’emballage, contraintes d’accès, dates flexibles...',
      name: 'message',
    }}
    disclaimer={{
      label: 'En envoyant ce formulaire, j’accepte le traitement de mes données pour être recontacté.',
    }}
    description="Nous intervenons en Suisse romande et sur demande pour les trajets longue distance."
  />

  <Features2
    title="Contact direct"
    subtitle="Choisissez le canal qui vous convient le mieux."
    items={[
      { title: 'Téléphone', description: '+41 76 798 27 93', icon: 'tabler:phone' },
      { title: 'Email', description: 'pedro@pedrodemenagement.ch', icon: 'tabler:mail' },
      { title: 'Adresse', description: '1003 Lausanne', icon: 'tabler:map-pin' },
      { title: 'Disponibilité', description: 'Du lundi au samedi, 8h00 – 18h00', icon: 'tabler:calendar-time' },
      { title: 'Zone', description: 'Lausanne, Riviera,Genève, Valais et longue distance sur demande', icon: 'tabler:world' },
    ]}
  />
</Layout>
