---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Parlons de votre site clé-en-main" subtitle="Un expert TonSiteWeb.ch vous répond sous un jour ouvré." />

  <ContactUs
    id="form"
    title="Demander une démo ou un devis"
    subtitle="Remplissez le formulaire, nous vous recontactons par téléphone ou visio pour préparer votre mise en ligne (délai typique&nbsp;: 5 jours ouvrés)."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom et prénom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email professionnel',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Entreprise',
      },
      {
        type: 'select',
        name: 'service',
        label: 'Pack souhaité',
        options: [
          { label: 'Essentiel', value: 'essentiel' },
          { label: 'Automatisation', value: 'automation' },
          { label: 'Maintenance sécurité', value: 'maintenance' },
          { label: 'Autre / à définir', value: 'custom' },
        ],
      },
    ]}
    textarea={{
      label: 'Votre projet',
      placeholder: 'Présentez votre activité, vos objectifs et vos délais.',
    }}
    disclaimer={{
      label:
        'En envoyant ce formulaire, vous acceptez que TonSiteWeb.ch traite vos données pour répondre à votre demande, conformément à notre politique de confidentialité.',
    }}
    description="Nos bureaux sont ouverts du lundi au vendredi, 9h-17h. Nous parlons français, anglais et allemand."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact direct"
    subtitle="Choisissez le canal qui vous convient le mieux."
    items={[
      {
        title: 'Téléphone',
        description: '+41 21 555 24 24',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'support@tonsiteweb.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'Adresse',
        description: 'Rue du Grand-Chêne 8, 1003 Lausanne',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Disponibilité',
        description: 'Du lundi au vendredi, 9h00 – 17h00',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Support client',
        description: 'support@tonsiteweb.ch — réponse sous un jour ouvré',
        icon: 'tabler:help',
      },
    ]}
  />
</Layout>
