---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Tarifs',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Tarifs"
    title="Des offres transparentes, facturées en Suisse"
    subtitle="Chaque pack inclut la livraison en 24 h, l’hébergement, le support et la maintenance automatique."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Nos packs clés-en-main"
    subtitle="Choisissez l’offre qui correspond à votre besoin. Sans frais cachés."
    prices={[
      {
        title: 'Express 24 h',
        subtitle: 'Présence en ligne immédiate',
        price: 1490,
        period: 'CHF — paiement unique',
        items: [
          {
            description: 'Site vitrine 5 sections + page contact',
          },
          {
            description: 'Contenus rédigés et optimisés pour le SEO local',
          },
          {
            description: 'Hébergement suisse & certificat SSL inclus 12 mois',
          },
          {
            description: 'Mise en ligne en 24 h ouvrées',
          },
        ],
        callToAction: {
          text: 'Démarrer',
          href: '/contact#form',
        },
      },
      {
        title: 'Signature',
        subtitle: 'Image premium & multilingue',
        price: 2490,
        period: 'CHF — paiement unique',
        items: [
          {
            description: 'Design sur-mesure 8 sections + blog ou landing',
          },
          {
            description: 'Contenus FR/EN ou FR/DE + shooting photo partenaire',
          },
          {
            description: 'Intégration de vos outils (réservation, CRM, paiement)',
          },
          {
            description: 'Atelier stratégique de 60 min avec un expert',
          },
        ],
        callToAction: {
          text: 'Réserver',
          href: '/contact#form',
        },
        hasRibbon: true,
        ribbonTitle: 'Best-seller',
      },
      {
        title: 'Continuum',
        subtitle: 'Accompagnement mensuel complet',
        price: 290,
        period: 'CHF / mois — engagement 12 mois',
        items: [
          {
            description: 'Maintenance illimitée & mises à jour hebdomadaires',
          },
          {
            description: 'Production de 2 contenus premium / mois',
          },
          {
            description: 'Campagnes SEO & SEA locales pilotées par nos experts',
          },
          {
            description: 'Reporting mensuel + workshop trimestriel',
          },
        ],
        callToAction: {
          text: 'Parler à un conseiller',
          href: '/contact#form',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Avantages inclus"
    subtitle="Toutes nos offres comprennent ces garanties."
    columns={2}
    items={[
      {
        title: 'Support illimité',
        description: 'Réponses en moins de 2 h ouvrées via WhatsApp, téléphone ou email.',
        icon: 'tabler:headset',
      },
      {
        title: 'Hébergement souverain',
        description: 'Serveurs situés en Suisse, énergie renouvelable, conformité RGPD/LPD.',
        icon: 'tabler:server',
      },
      {
        title: 'Tableau de bord client',
        description: 'Suivez l’avancement, les performances et vos demandes en temps réel.',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Facturation claire',
        description: 'TVA incluse, facture QR ou Twint, mensualisation disponible.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Performance garantie',
        description: 'Score Lighthouse ≥ 90 sur mobile et desktop ou optimisation offerte.',
        icon: 'tabler:gauge',
      },
      {
        title: 'Sécurité renforcée',
        description: 'Sauvegardes quotidiennes, anti-spam, pare-feu applicatif.',
        icon: 'tabler:lock',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

    <Steps
      title="Comment se déroule votre projet"
      tagline="Parcours"
      isReversed={true}
      items={[
        {
          title: '1. Signature numérique',
          description: 'Validez le pack choisi et recevez votre accès onboarding.',
          icon: 'tabler:edit',
        },
        {
          title: '2. Questionnaire intelligent',
          description: 'Renseignez vos informations clés, importez vos visuels et sélectionnez vos modules.',
          icon: 'tabler:clipboard-list',
        },
        {
          title: '3. Production automatisée',
          description: 'Notre plateforme génère votre site, nos experts ajustent et contrôlent.',
          icon: 'tabler:robot',
        },
        {
          title: '4. Mise en ligne & formation',
          description: 'Recevez votre site prêt, le guide vidéo et le rapport de performance.',
          icon: 'tabler:rocket',
        },
      ]}
    >
      <Fragment slot="image">
        <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-gradient-to-br from-blue-700 via-slate-900 to-slate-800 p-10 text-white shadow-xl">
          <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Process</p>
          <p class="mt-6 max-w-xs text-base text-blue-100/90">
            De la signature à la mise en ligne, chaque étape est horodatée et documentée dans votre espace client.
          </p>
        </div>
      </Fragment>
    </Steps>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Questions sur nos tarifs"
    subtitle="Nous croyons en une transparence totale."
    items={[
      {
        title: 'Les prix incluent-ils la TVA ?',
        description: 'Oui, tous les montants sont affichés TTC. La facture mentionne la TVA suisse et le numéro IDE.',
      },
      {
        title: 'Que se passe-t-il après 12 mois d’hébergement ?',
        description: 'Votre site reste en ligne. L’hébergement et le support se renouvellent à 290 CHF/an ou via l’offre Continuum.',
      },
      {
        title: 'Proposez-vous des options e-commerce ?',
        description: 'Oui, sur devis. Nous intégrons paiement en ligne, Click & Collect ou catalogue produits selon vos besoins.',
      },
      {
        title: 'Puis-je payer en plusieurs fois ?',
        description: 'Paiement possible en 3 fois sans frais via carte ou virement. Les abonnements sont prélevés mensuellement.',
      },
      {
        title: 'Quelles sont les conditions de résiliation ?',
        description: 'Pour l’offre Continuum, un préavis de 30 jours suffit après la période d’engagement initiale de 12 mois.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Recevoir une proposition',
        href: '/contact#form',
        icon: 'tabler:mail-forward',
      },
      {
        text: 'Comparer les packs',
        href: '/services',
      },
    ]}
  >
    <Fragment slot="title">
      Besoin d’un devis personnalisé ?
    </Fragment>

    <Fragment slot="subtitle">
      Nous adaptons chaque offre aux spécificités de votre activité sur l’Arc lémanique.
    </Fragment>
  </CallToAction>
</Layout>
