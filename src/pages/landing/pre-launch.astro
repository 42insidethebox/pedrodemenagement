---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Landing Pré-lancement',
  description: 'Landing MonWebsite.ch pour constituer une liste d’attente avant lancement produit.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Landing — Pré-lancement"
    actions={[
      {
        variant: 'primary',
        text: 'Activer cette landing',
        href: '/contact#form',
        icon: 'tabler:sparkles',
      },
      { text: 'Comparer les offres', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Lancement en 24 h</span> — construisez votre liste d’attente
    </Fragment>

    <Fragment slot="subtitle">
      Compteur, liste de diffusion et aperçu produit pour capter vos early adopters avant la mise en ligne.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[16/9] overflow-hidden rounded-2xl bg-gradient-to-br from-purple-500 via-slate-900 to-blue-600 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-purple-100/80">Pré-lancement</p>
        <h4 class="mt-4 text-3xl font-semibold">Countdown dynamique</h4>
        <p class="mt-6 max-w-lg text-purple-100/90">Synchronisé avec votre date de sortie, avec inscriptions email ou SMS.</p>
      </div>
    </Fragment>
  </Hero2>

  <Content
    isReversed
    title="Composants clés"
    subtitle="Tout pour faire monter l’anticipation."
    items={[
      {
        title: 'Bloc teaser',
        description: 'Vidéo ou animation légère présentant le concept.',
        icon: 'tabler:movie',
      },
      {
        title: 'Liste d’attente',
        description: 'Formulaire simple avec segmentation (investisseur, client, presse).',
        icon: 'tabler:list',
      },
      {
        title: 'Avantages early-bird',
        description: 'Bénéfices exclusifs présentés avec badges et preuves sociales.',
        icon: 'tabler:gift',
      },
      {
        title: 'Timeline produit',
        description: 'Visualisation des prochaines étapes et jalons clés.',
        icon: 'tabler:timeline',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-purple-700 to-blue-700 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Taux d’inscription</h4>
        <p class="mt-6 max-w-sm text-purple-100/90">Jusqu’à 5x plus d’inscrits qu’un formulaire standard.</p>
      </div>
    </Fragment>
  </Content>

  <Features2
    title="Social proof"
    subtitle="Rassurez avant le lancement."
    items={[
      {
        title: 'Presse & mentions',
        description: 'Badges médias, citations et logos partenaires.',
      },
      {
        title: 'Communauté',
        description: 'Nombre d’inscrits en direct et témoignages de beta testeurs.',
      },
      {
        title: 'FAQ anticipation',
        description: 'Répond aux questions sur la date, le pricing et le support.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Créer ma liste d’attente',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Voir la landing produit',
        href: '/landing/product',
      },
    ]}
  >
    <Fragment slot="title">Préparez un lancement millimétré</Fragment>

    <Fragment slot="subtitle">Nous configurons votre landing, emailings et automatisations en 24 h.</Fragment>
  </CallToAction>
</Layout>
