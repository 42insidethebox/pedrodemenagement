---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Landing Subscription',
  description: 'Landing MonWebsite.ch pour vendre une offre par abonnement avec plans, FAQ et preuve sociale.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Landing — Subscription"
    actions={[
      {
        variant: 'primary',
        text: 'Lancer mon abonnement',
        href: '/contact#form',
        icon: 'tabler:repeat',
      },
      { text: 'Voir les plans', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Abonnement Léman</span> — fidélisez vos clients
    </Fragment>

    <Fragment slot="subtitle">
      Plans mensuels/annuels, avantages comparés et preuve sociale pour encourager l’engagement récurrent.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[16/9] overflow-hidden rounded-2xl bg-gradient-to-br from-emerald-500 via-slate-900 to-purple-600 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-emerald-100/80">Plans</p>
        <h4 class="mt-4 text-3xl font-semibold">Choix simple</h4>
        <p class="mt-6 max-w-lg text-emerald-100/90">Comparatif clair entre les offres mensuelles, annuelles et premium.</p>
      </div>
    </Fragment>
  </Hero2>

  <Features2
    title="Sections essentielles"
    subtitle="Pensées pour augmenter le panier moyen."
    items={[
      {
        title: 'Plans modulaires',
        description: 'Tableau comparatif, badges best-seller et CTA répétés.',
      },
      {
        title: 'Avantages récurrents',
        description: 'Mise en avant des services inclus chaque mois ou trimestre.',
      },
      {
        title: 'Preuve sociale',
        description: 'Témoignages clients, note moyenne et logos partenaires.',
      },
      {
        title: 'FAQ facturation',
        description: 'Répond aux questions sur la résiliation, les paiements et l’engagement.',
      },
    ]}
  />

  <Content
    isReversed
    title="Optimisation conversion"
    subtitle="Tous les CTA mènent vers la souscription."
    items={[
      {
        title: 'Bandeau sticky',
        description: 'Affiche le plan sélectionné sur mobile et desktop.',
        icon: 'tabler:bookmark',
      },
      {
        title: 'Upsell intégré',
        description: 'Propose un add-on premium directement dans le flux.',
        icon: 'tabler:arrow-up-circle',
      },
      {
        title: 'Paiement sécurisé',
        description: 'Intégration Stripe, Payrexx ou Twint avec confirmation instantanée.',
        icon: 'tabler:lock',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-emerald-500 to-purple-600 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Taux d’abonnement</h4>
        <p class="mt-6 max-w-sm text-emerald-100/90">+31 % d’inscriptions grâce aux rappels CTA et à l’offre annuelle mise en avant.</p>
      </div>
    </Fragment>
  </Content>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Activer l’abonnement',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Voir la landing sales',
        href: '/landing/sales',
      },
    ]}
  >
    <Fragment slot="title">Passez en mode revenus récurrents</Fragment>

    <Fragment slot="subtitle">Nous configurons vos plans, vos paiements et vos automatisations en 24 h.</Fragment>
  </CallToAction>
</Layout>
