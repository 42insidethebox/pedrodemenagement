---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Landing Génération de leads',
  description: 'Landing MonWebsite.ch dédiée à la captation de leads qualifiés avec formulaire multi-étapes et preuves sociales.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Landing — Lead gen"
    actions={[
      {
        variant: 'primary',
        text: 'Configurer avec nous',
        href: '/contact#form',
        icon: 'tabler:calendar',
      },
      { text: 'Voir les tarifs', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Pipeline Léman</span> — capturez des leads qualifiés
    </Fragment>

    <Fragment slot="subtitle">
      Formulaire intelligent, scoring automatique et suivi des conversions pour vos campagnes SEA ou social ads.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[16/10] overflow-hidden rounded-2xl bg-gradient-to-br from-emerald-500 via-slate-900 to-blue-700 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-emerald-100/80">Formulaire smart</p>
        <h4 class="mt-4 text-3xl font-semibold">Étapes personnalisées</h4>
        <p class="mt-6 max-w-lg text-emerald-100/90">Vos questions s’adaptent selon la réponse précédente pour augmenter le taux de conversion.</p>
      </div>
    </Fragment>
  </Hero2>

  <Content
    isReversed
    title="Formulaire multi-étapes"
    subtitle="Optimisé pour la conversion mobile et desktop."
    items={[
      {
        title: 'Progress bar',
        description: 'Affiche l’avancement du lead pour réduire l’abandon.',
        icon: 'tabler:progress',
      },
      {
        title: 'Qualification automatique',
        description: 'Webhook vers votre CRM, scoring en temps réel et notification Slack.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Calendrier intégré',
        description: 'Propose un créneau de rendez-vous dès la dernière étape.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Consentements RGPD',
        description: 'Double opt-in, mention légale et enregistrement de la preuve de consentement.',
        icon: 'tabler:shield-check',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-500 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Taux de conversion</h4>
        <p class="mt-6 max-w-sm text-emerald-100/90">Jusqu’à +47 % par rapport à un formulaire classique.</p>
      </div>
    </Fragment>
  </Content>

  <Features2
    title="Preuves sociales"
    subtitle="Renforcez la crédibilité autour du formulaire."
    items={[
      {
        title: 'Logos clients',
        description: 'Affichez vos références suisses ou internationales.',
      },
      {
        title: 'Avis vidéo',
        description: 'Intégration de témoignages courts avec transcription.',
      },
      {
        title: 'KPIs clés',
        description: 'Nombre de clients, ROI moyen, temps d’activation.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Déployer la landing',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Voir le modèle pré-lancement',
        href: '/landing/pre-launch',
      },
    ]}
  >
    <Fragment slot="title">Vos campagnes méritent un entonnoir performant</Fragment>

    <Fragment slot="subtitle">Livraison en 24 h avec tracking, pixel et automatisations configurés.</Fragment>
  </CallToAction>
</Layout>
