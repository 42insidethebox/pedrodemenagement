---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Landing Produit',
  description: 'Landing MonWebsite.ch pour présenter un produit ou service phare avec storytelling et caractéristiques détaillées.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Landing — Produit"
    actions={[
      {
        variant: 'primary',
        text: 'Commander la landing',
        href: '/contact#form',
        icon: 'tabler:box',
      },
      { text: 'Voir les autres modèles', href: '/landing/sales' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Produit Léman</span> — présentez chaque détail
    </Fragment>

    <Fragment slot="subtitle">
      Mettez en scène votre produit avec un hero immersif, fiches techniques et comparatif.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-2xl bg-gradient-to-br from-amber-500 via-slate-900 to-blue-600 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-amber-100/80">Produit</p>
        <h4 class="mt-4 text-3xl font-semibold">Présentation premium</h4>
        <p class="mt-6 max-w-sm text-amber-100/90">Photos haute définition, zoom interactif et fiche technique téléchargeable.</p>
      </div>
    </Fragment>
  </Hero2>

  <Features2
    title="Modules inclus"
    subtitle="Pensés pour convaincre vos prospects."
    items={[
      {
        title: 'Gallery immersive',
        description: 'Carousel photo/vidéo avec zoom et légendes.',
      },
      {
        title: 'Caractéristiques',
        description: 'Tableau comparatif et bullet points techniques.',
      },
      {
        title: 'Avis clients',
        description: 'Notes, avis détaillés et badges de confiance.',
      },
      {
        title: 'Call-to-action',
        description: 'Boutons “Essayer” / “Commander” avec intégration paiement.',
      },
    ]}
  />

  <Content
    isReversed
    title="Storytelling"
    subtitle="Expliquez l’histoire derrière votre produit."
    items={[
      {
        title: 'Origine',
        description: 'Texte narratif et photo équipe ou atelier.',
        icon: 'tabler:book-2',
      },
      {
        title: 'Usage',
        description: 'Étapes d’utilisation illustrées et fiche PDF.',
        icon: 'tabler:list-details',
      },
      {
        title: 'Support',
        description: 'Accès FAQ, vidéos tutoriels et chat.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-amber-500 to-blue-600 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Boost des conversions</h4>
        <p class="mt-6 max-w-sm text-amber-100/90">+38 % de clics sur “Commander” lors des tests utilisateurs.</p>
      </div>
    </Fragment>
  </Content>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Lancer cette landing',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Voir la landing sales',
        href: '/landing/sales',
      },
    ]}
  >
    <Fragment slot="title">Prêt à dévoiler votre produit ?</Fragment>

    <Fragment slot="subtitle">Nous préparons contenus, visuels et intégrations e-commerce en 24 h.</Fragment>
  </CallToAction>
</Layout>
