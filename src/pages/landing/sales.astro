---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Landing Sales',
  description: 'Landing MonWebsite.ch focalisée sur la signature de devis ou la prise de rendez-vous commercial.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Landing — Sales"
    actions={[
      {
        variant: 'primary',
        text: 'Déployer cette page',
        href: '/contact#form',
        icon: 'tabler:signature',
      },
      { text: 'Voir l’offre subscription', href: '/landing/subscription' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Sales Booster</span> — convertissez vos leads en clients
    </Fragment>

    <Fragment slot="subtitle">
      Une landing structurée autour d’un argumentaire commercial, d’une preuve sociale forte et d’un formulaire de prise de rendez-vous.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[16/9] overflow-hidden rounded-2xl bg-gradient-to-br from-blue-700 via-slate-900 to-amber-500 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Closing</p>
        <h4 class="mt-4 text-3xl font-semibold">Argumentaire structuré</h4>
        <p class="mt-6 max-w-lg text-blue-100/90">Section objections, bénéfices et garanties pour lever les freins.</p>
      </div>
    </Fragment>
  </Hero2>

  <Features2
    title="Modules orientés vente"
    subtitle="Conçus pour rassurer et engager."
    items={[
      {
        title: 'Comparatif',
        description: 'Tableau comparatif vs concurrence ou anciennes méthodes.',
      },
      {
        title: 'Bloc garanties',
        description: 'Garantie satisfait ou remboursé, support prioritaire, conformité.',
      },
      {
        title: 'Témoignages vidéo',
        description: 'Cas clients chiffrés et citations fortes.',
      },
      {
        title: 'FAQ objections',
        description: 'Réponses aux blocages prix, délais et personnalisation.',
      },
    ]}
  />

  <Content
    isReversed
    title="Formulaire de rendez-vous"
    subtitle="Synchronisé avec votre CRM et votre agenda."
    items={[
      {
        title: 'Calendly / SavvyCal',
        description: 'Intégration native pour réserver un créneau instantanément.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Qualification rapide',
        description: 'Trois questions clés pour prioriser les leads.',
        icon: 'tabler:forms',
      },
      {
        title: 'Score automatique',
        description: 'Webhook vers HubSpot, Pipedrive ou Zoho avec tag automatique.',
        icon: 'tabler:sparkles',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-blue-700 to-amber-500 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Taux de closing</h4>
        <p class="mt-6 max-w-sm text-amber-100/90">+22 % en moyenne par rapport à un formulaire classique.</p>
      </div>
    </Fragment>
  </Content>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Réserver mon set-up',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Voir la landing subscription',
        href: '/landing/subscription',
      },
    ]}
  >
    <Fragment slot="title">Besoin d’une landing prête à vendre ?</Fragment>

    <Fragment slot="subtitle">Nous intégrons votre CRM, vos scripts de vente et vos garanties en 24 h.</Fragment>
  </CallToAction>
</Layout>
