---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/ui/Headline.astro';

type Tpl = { id: string; name: string; preview?: string; url?: string };

const plan = Astro.url.searchParams.get('plan') || '';
const templates: Tpl[] = [
  { id: 'classic-clean', name: 'Classic Clean', url: 'https://demo.example.com/classic-clean' },
  { id: 'bold-contrast', name: 'Bold Contrast', url: 'https://demo.example.com/bold-contrast' },
  { id: 'serif-elegance', name: 'Serif Elegance', url: 'https://demo.example.com/serif-elegance' },
  { id: 'minimal-grid', name: 'Minimal Grid', url: 'https://demo.example.com/minimal-grid' },
  { id: 'warm-landing', name: 'Warm Landing', url: 'https://demo.example.com/warm-landing' },
  { id: 'artisan-folio', name: 'Artisan Folio', url: 'https://demo.example.com/artisan-folio' },
];

const metadata = { title: 'Choisir un modèle' };
---

<Layout metadata={metadata}>
  <div class="max-w-6xl mx-auto px-4 py-10">
    <Headline title="Choisissez votre modèle" subtitle={plan ? `Plan sélectionné: ${plan}` : 'Sélectionnez un pack sur la page Tarifs d\'abord'} />

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
      {templates.map((t) => (
        <div class="rounded-xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 shadow-sm overflow-hidden flex flex-col">
          <div class="aspect-video bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-500 text-sm">
            Aperçu
          </div>
          <div class="p-5 flex-1 flex flex-col">
            <h3 class="text-base font-semibold text-slate-900 dark:text-slate-100">{t.name}</h3>
            <div class="mt-4 flex gap-2 mt-auto">
              {t.url ? (
                <a
                  class="inline-flex items-center justify-center rounded-lg border border-slate-300 dark:border-slate-700 px-3 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-800 transition"
                  href={t.url}
                  target="_blank"
                  rel="noreferrer"
                >
                  Prévisualiser
                </a>
              ) : ''}
              <a
                class="inline-flex items-center justify-center rounded-lg bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 transition"
                href={`/api/payment/redirect?plan=${encodeURIComponent(plan)}&template=${encodeURIComponent(t.id)}`}
              >
                Sélectionner ce modèle
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
