---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

import { headerDataDe, footerDataDe } from '~/navigation';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata} header={headerDataDe} footer={footerDataDe}>
  <HeroText tagline="Kontakt" title="Lassen Sie uns über Ihre Website sprechen" subtitle="Eine Expertin oder ein Experte meldet sich innerhalb eines Arbeitstages." />

  <ContactUs
    id="form"
    title="Demo oder Angebot anfragen"
    subtitle="Füllen Sie das Formular aus – wir melden uns per Telefon oder Video, um den Launch vorzubereiten (typischer Zeitrahmen: 5 Arbeitstage)."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Vor- und Nachname',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Geschäftliche E-Mail',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Unternehmen',
      },
      {
        type: 'select',
        name: 'service',
        label: 'Gewünschtes Paket',
        options: [
          { label: 'Essentiel', value: 'essentiel' },
          { label: 'Automatisierung', value: 'automation' },
          { label: 'Serviceplan', value: 'maintenance' },
          { label: 'Individuell / zu definieren', value: 'custom' },
        ],
      },
    ]}
    textarea={{
      label: 'Ihr Projekt',
      placeholder: 'Beschreiben Sie Ihr Unternehmen, Ziele und Zeitplan.',
    }}
    disclaimer={{
      label:
        'Mit dem Absenden stimmen Sie zu, dass TonSiteWeb.ch Ihre Daten verarbeitet, um Ihre Anfrage zu beantworten – gemäss unserer Datenschutzerklärung.',
    }}
    description="Unsere Büros sind Montag bis Freitag von 9–17 Uhr geöffnet. Wir sprechen Französisch, Englisch und Deutsch."
  />

  <Features2
    title="Direkter Kontakt"
    subtitle="Wählen Sie den Kanal, der zu Ihnen passt."
    items={[
      {
        title: 'Telefon',
        description: '+41 21 555 24 24',
        icon: 'tabler:phone',
      },
      {
        title: 'E-Mail',
    description: 'support@tonsiteweb.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'Adresse',
        description: 'Rue du Grand-Chêne 8, 1003 Lausanne',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Erreichbarkeit',
        description: 'Montag bis Freitag, 09:00 – 17:00',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Kundensupport',
    description: 'support@tonsiteweb.ch — Antwort innerhalb eines Arbeitstages',
        icon: 'tabler:help',
      },
    ]}
  />
</Layout>
