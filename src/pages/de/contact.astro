---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Kontakt"
    title="Planen wir Ihren Launch"
    subtitle="Eine Expert·in von MonWebsite.ch meldet sich innerhalb von 2 Arbeitsstunden."
  />

  <ContactUs
    id="form"
    title="Demo oder Offerte anfragen"
    subtitle="Füllen Sie das Formular aus – wir melden uns per Telefon oder Video, um Ihren 24h-Go-Live vorzubereiten."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Vollständiger Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Business-E-Mail',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Unternehmen',
      },
      {
        type: 'select',
        name: 'service',
        label: 'Gewünschtes Paket',
        options: [
          { label: 'Express 24 h', value: 'express' },
          { label: 'Signature', value: 'signature' },
          { label: 'Continuum', value: 'continuum' },
          { label: 'Individuell / zu definieren', value: 'custom' },
        ],
      },
    ]}
    textarea={{
      label: 'Ihr Projekt',
      placeholder: 'Teilen Sie Ihre Tätigkeit, Ziele und Ihren Zeitplan.',
    }}
    disclaimer={{
      label:
        'Mit dem Absenden stimmen Sie zu, dass MonWebsite.ch Ihre Daten gemäss Datenschutzrichtlinie zur Beantwortung Ihrer Anfrage verarbeitet.',
    }}
    description="Bürozeiten Montag bis Samstag, 8–18 Uhr. Wir sprechen Französisch, Deutsch, Englisch und Italienisch."
  />

  <Features2
    title="Kontaktieren Sie uns direkt"
    subtitle="Wählen Sie den Kanal, der für Sie am besten passt."
    items={[
      {
        title: 'Telefon',
        description: '+41 21 555 24 24',
        icon: 'tabler:phone',
      },
      {
        title: 'E-Mail',
        description: 'hello@monwebsite.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'WhatsApp Business',
        description: '+41 79 555 24 24',
        icon: 'tabler:brand-whatsapp',
      },
      {
        title: 'Adresse',
        description: 'Rue du Grand-Chêne 8, 1003 Lausanne',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Öffnungszeiten',
        description: 'Montag bis Samstag, 08:00 – 18:00',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Kundensupport',
        description: 'support@monwebsite.ch — Antwort in < 2 h',
        icon: 'tabler:help',
      },
    ]}
  />
</Layout>
