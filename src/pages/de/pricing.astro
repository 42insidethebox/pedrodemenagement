---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import PricingOptions from '~/components/widgets/PricingOptions.astro';
import Note from '~/components/widgets/Note.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { headerDataDe, footerDataDe } from '~/navigation';

const metadata = {
  title: 'Preise',
};
---

<Layout metadata={metadata} header={headerDataDe} footer={footerDataDe}>
  <HeroText
    tagline="Preise"
    title="Transparente Pakete, in der Schweiz fakturiert"
    subtitle="Jedes Paket umfasst Design, Launch und menschliche Begleitung. Betreuung und Automatisierungen nach Bedarf."
  />

  <Prices
    title="Unsere schlüsselfertigen Pakete"
    subtitle="Wählen Sie das Angebot, das zu Ihrem Bedarf passt. Ohne versteckte Kosten."
    prices={[
      {
        title: 'Essentiel',
        subtitle: 'Schlüsselfertige Showcase-Seite (Code geliefert)',
        price: 999,
        period: 'ab — einmalig',
        items: [
          {
            description: 'Showcase-Seite mit 5 Sektionen + responsive Kontaktseite',
          },
          {
            description: 'Inhalte vom Kunden geliefert; wir integrieren und formatieren',
          },
          {
            description: 'Hosting nicht inbegriffen (Servicepläne ab 79 CHF/Monat)',
          },
          {
            description: 'Video-Training + Checkliste für Eigenständigkeit',
          },
        ],
        callToAction: {
          text: 'Projekt starten',
          href: '#modal-essential-de',
        },
      },
      {
        title: 'Erweitert',
        subtitle: 'Website + erweiterte Funktionen',
        price: 3000,
        period: 'ab — einmalig',
        items: [
          { description: 'Enthält das Paket Essentiel' },
          { description: 'Einfaches Backend oder spezifische Funktionen' },
          { description: 'End-to-End-Tests und kurze Dokumentation' },
        ],
        callToAction: {
          text: 'Angebot anfragen',
          href: '/de/contact#form',
        },
      },
      {
        title: 'Serviceplan',
        subtitle: 'Updates und Optionen je nach Stufe',
        price: 79,
        period: 'ab / Monat — ohne Überraschungen',
        items: [
          {
            description: 'Sicherheitsupdates und geplante Backups',
          },
          {
            description: 'Uptime-Monitoring & priorisierte Korrekturen',
          },
          {
            description: 'Pro-E-Mail & Schweizer Hosting ab 149–249 CHF/Monat',
          },
          {
            description: 'Support per E-Mail & Video innerhalb eines Arbeitstages',
          },
        ],
        callToAction: {
          text: 'Serviceplan aktivieren',
          href: '/de/contact#form',
        },
      },
    ]}
  />

  <div class="mt-6 grid gap-4 max-w-7xl mx-auto px-4">
    <div class="flex flex-wrap gap-4">
      <PricingOptions
        id="modal-essential-de"
        triggerText=""
        title="Essentiel-Pakete"
        subtitle="Automationsgrad auswählen"
        ctaText="Wählen"
        tiers={[
          { label: 'CHF 999', price: 'ab 999', features: ['Statische Seite', 'Einfaches Formular (E-Mail)'], href: '/de/choose-template?plan=essential999', info: ['Hosting & SSL inklusive (3 Monate)', '1 Runde kleiner Anpassungen (≤ 30 Min)', 'Kombinierbar mit Care 79 (Hosting & Sicherheit)'] },
          { label: 'CHF 1’249', price: '1’249', features: ['Enthält Essentiel', '1 Automation (z. B. Buchung)'], href: '/de/choose-template?plan=essential1249', primary: true, info: ['Hosting & SSL inklusive (6 Monate)', '1 Runde kleiner Anpassungen (≤ 30 Min)', 'Kombinierbar mit Care 79 (Hosting & Sicherheit)'] },
          { label: 'CHF 1’500', price: '1’500', features: ['Enthält Essentiel', '2–3 Automationen'], href: '/de/choose-template?plan=essential1500', info: ['Hosting & SSL inklusive (9 Monate)', '1 Runde kleiner Anpassungen (≤ 30 Min)', 'Kombinierbar mit Care 79 (Hosting & Sicherheit)'] },
        ]}
        footnote="Hosting & SSL inklusive (3/6/9 Monate je nach Paket). Technischer Support inklusive. Inhalts-/Designänderungen separat verrechnet."
      />
    </div>
  </div>

  

  <Features3
    title="Was unsere Angebote beinhalten können"
    subtitle="Je nach Paket und Bedarf."
    columns={2}
    items={[
      {
        title: 'Menschlicher Support',
        description: 'Begleitung per E-Mail und Telefon, Antworten innerhalb eines Arbeitstages.',
        icon: 'tabler:headset',
      },
      {
        title: 'Schweizer Hosting (optional)',
        description: 'Server in der Schweiz mit SSL, auf höheren Stufen verfügbar.',
        icon: 'tabler:server',
      },
      {
        title: 'Einfacher Prozess',
        description: 'Austausch per E‑Mail und Freigaben pro Schritt (kein Kundenportal).',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Klare Fakturierung',
        description: 'MwSt. inklusive, QR-Rechnung oder Twint, monatliche Zahlung möglich.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Optimierte Performance',
        description: 'Astro-Architektur und Bildoptimierung für schnelle Ladezeiten.',
        icon: 'tabler:gauge',
      },
      {
        title: 'Erhöhte Sicherheit',
        description: 'Initiale Backups, Application-Firewall und regelmässige Updates.',
        icon: 'tabler:lock',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <Steps
    title="So läuft Ihr Projekt ab"
    tagline="Ablauf"
    isReversed={true}
    items={[
      {
        title: '1. Digitale Unterschrift',
        description: 'Paket bestätigen und Zugang zum Onboarding erhalten.',
        icon: 'tabler:edit',
      },
      {
        title: '2. Intelligenter Fragebogen',
        description: 'Schlüsselinformationen teilen, Visuals hochladen und Module wählen.',
        icon: 'tabler:clipboard-list',
      },
      {
        title: '3. Überwachte Produktion',
        description: 'Plattform generiert Ihre Website, Expert·innen finalisieren und prüfen.',
        icon: 'tabler:robot',
      },
      {
        title: '4. Freigabe & Training',
        description: 'Fertige Website, Video-Guide und nächste Schritte erhalten.',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-gradient-to-br from-blue-700 via-slate-900 to-slate-800 p-10 text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Prozess</p>
          <p class="mt-6 max-w-xs text-base text-blue-100/90">
            Einfacher Ablauf: Briefing, Inhaltsintegration und Freigaben per E‑Mail.
          </p>
      </div>
    </Fragment>
  </Steps>

  <FAQs
    title="Fragen zu unseren Preisen"
    subtitle="Wir setzen auf vollständige Transparenz."
    items={[
      {
        title: 'Ist die MwSt. enthalten?',
        description: 'Ja, alle Beträge sind inkl. MwSt. Die Rechnung weist die Schweizer MwSt. und die IDE-Nummer aus.',
      },
      {
        title: 'Wie lange dauert das Paket Essentiel?',
        description: 'Rund fünf Arbeitstage nach Eingang Ihrer Inhalte. Den genauen Zeitplan erhalten Sie beim Briefing.',
      },
      {
        title: 'Wie verrechnet ihr Integrationen?',
        description: 'Einfache Integrationen sind enthalten. API‑Anbindungen und komplexe Szenarien werden offeriert.',
      },
      {
        title: 'Ist der Serviceplan obligatorisch?',
        description: 'Nein. Pläne zu 79 / 149 / 249 CHF/Monat verfügbar. Kündigungsfrist 30 Tage.',
      },
      {
        title: 'Welche Zahlungsmittel akzeptiert ihr?',
        description: 'Schweizer Karten, Twint, Banküberweisung und QR-Rechnung. Abonnemente monatlich oder jährlich zahlbar.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Angebot erhalten',
        href: '/de/contact#form',
        icon: 'tabler:mail-forward',
      },
      {
        text: 'Pakete vergleichen',
        href: '/de/services',
      },
    ]}
  >
    <Fragment slot="title">Brauchen Sie ein massgeschneidertes Angebot?</Fragment>

    <Fragment slot="subtitle">
      Wir passen jedes Paket an die Besonderheiten Ihres Unternehmens im Genfersee-Raum an.
    </Fragment>
  </CallToAction>
</Layout>
