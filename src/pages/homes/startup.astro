---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Template Startup & Innovation',
  description: 'Landing MonWebsite.ch pour startups de l’Arc lémanique — pitch, roadmap, traction et CTA investisseurs.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Template secteur — Startup"
    actions={[
      {
        variant: 'primary',
        text: 'Pitcher avec ce template',
        href: '/contact#form',
        icon: 'tabler:rocket',
      },
      { text: 'Consulter les plans', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">NovaLink</span> — racontez votre vision en 30 secondes
    </Fragment>

    <Fragment slot="subtitle">
      Une landing conçue pour convaincre investisseurs, partenaires et premiers clients : storytelling clair, chiffres clés et roadmap visuelle.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-2xl bg-gradient-to-br from-purple-600 via-blue-700 to-slate-900 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-purple-200/80">Vision produit</p>
        <h4 class="mt-4 text-3xl font-semibold">Prototype interactif</h4>
        <p class="mt-6 max-w-sm text-purple-100/90">
          Animation WebGL légère pour illustrer votre solution en contexte.
        </p>
      </div>
    </Fragment>
  </Hero2>

  <Features3
    title="Structure narrative"
    subtitle="Inspirée des meilleures présentations startup."
    columns={3}
    items={[
      {
        title: 'Problème → Solution',
        description: 'Deux sections opposées avec chiffres du marché et bénéfices principaux.',
        icon: 'tabler:presentation-analytics',
      },
      {
        title: 'Traction & métriques',
        description: 'Tableau KPI, croissance mensuelle, MRR projeté et témoignages presse.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Roadmap visuelle',
        description: 'Timeline interactive sur 12 mois avec jalons produit et levées de fonds.',
        icon: 'tabler:timeline',
      },
      {
        title: 'Équipe fondatrice',
        description: 'Portraits, expertise et CTA LinkedIn pour chaque cofondateur.',
        icon: 'tabler:users',
      },
      {
        title: 'Technologie & sécurité',
        description: 'Stack technique, architecture et conformité expliquées clairement.',
        icon: 'tabler:server-bolt',
      },
      {
        title: 'Appel à l’action final',
        description: 'Bloc double : “Investir” et “Rejoindre la beta” avec formulaire ciblé.',
        icon: 'tabler:target',
      },
    ]}
  />

  <Content
    isReversed
    title="Design pensé pour les pitchs"
    subtitle="Mobile-first, scrollytelling et interactions légères."
    items={[
      {
        title: 'Hero vidéo',
        description: 'Lecture automatique silencieuse, compatible mobile, avec fallback image optimisé.',
        icon: 'tabler:video',
      },
      {
        title: 'Sections diagonales',
        description: 'Angles dynamiques pour refléter l’innovation sans sacrifier la lisibilité.',
        icon: 'tabler:tilt-shift',
      },
      {
        title: 'Badges presse',
        description: 'Logos médias romands et citations pour rassurer vos visiteurs.',
        icon: 'tabler:news',
      },
      {
        title: 'Formulaire investisseur',
        description: 'Collecte montant potentiel, horizon et intérêt via formulaire sécurisé.',
        icon: 'tabler:report-money',
      },
    ]}
  >
    <Fragment slot="content">
      <p>
        Idéal pour annoncer une levée, un lancement produit ou une campagne de financement participatif en Suisse romande.
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-purple-700 to-blue-700 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Pitch deck intégré</h4>
        <p class="mt-6 max-w-sm text-blue-100/90">
          Téléversez vos slides et proposez un téléchargement sécurisé pour les investisseurs.
        </p>
      </div>
    </Fragment>
  </Content>

  <Testimonials
    title="Startups accompagnées"
    testimonials={[
      {
        title: 'HydraSense — Genève',
        testimonial:
          '“Avec cette landing, nous avons validé notre MVP et obtenu 180 inscriptions beta dès la première semaine.”',
        name: 'Lina Carrel',
        position: 'CEO',
      },
      {
        title: 'Aurora Biotech — Lausanne',
        testimonial:
          '“Le bloc investisseur et la roadmap interactive ont convaincu nos partenaires financiers en moins de 10 minutes.”',
        name: 'Hugo Werner',
        position: 'Co-fondateur',
      },
    ]}
  />

  <FAQs
    title="Questions fréquentes"
    items={[
      {
        title: 'Peut-on ajouter un module d’inscription beta ?',
        description: 'Oui, intégration Typeform, Tally ou formulaire sur mesure livrée en 24 h.',
      },
      {
        title: 'Le template supporte-t-il plusieurs langues ?',
        description: 'Français/anglais par défaut, allemand en option, switcher de langue inclus.',
      },
      {
        title: 'Peut-on connecter des outils analytics ?',
        description: 'Oui, Mixpanel, Amplitude ou Matomo sont configurés par nos équipes.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Planifier mon lancement',
        href: '/contact#form',
        icon: 'tabler:calendar-event',
      },
      {
        text: 'Voir le template SaaS',
        href: '/homes/saas',
      },
    ]}
  >
    <Fragment slot="title">Créez l’effet “wow” auprès de vos investisseurs</Fragment>

    <Fragment slot="subtitle">Nous livrons votre landing startup prête à pitcher en 24 h avec contenus et assets intégrés.</Fragment>
  </CallToAction>
</Layout>
