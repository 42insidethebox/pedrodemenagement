---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'Template Application Mobile',
  description:
    'Exemple de page d’accueil MonWebsite.ch pour une application mobile suisse : design premium, CTA clairs et conversions immédiates.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Template secteur — Application mobile"
    actions={[
      {
        variant: 'primary',
        text: 'Commander ce template',
        href: '/contact#form',
        icon: 'tabler:rocket',
      },
      { text: 'Voir les tarifs', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Application Léman</span> — vos utilisateurs convertissent en un geste
    </Fragment>

    <Fragment slot="subtitle">
      Une page d’accueil optimisée pour présenter une application mobile locale, avec sections storytelling, social proof et téléchargements instantanés.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[9/16] w-full max-w-sm mx-auto overflow-hidden rounded-3xl bg-gradient-to-br from-blue-600 via-slate-900 to-slate-800 p-8 text-white shadow-2xl">
        <p class="text-xs uppercase tracking-[0.3em] text-blue-200/80">Prototype mobile</p>
        <h4 class="mt-6 text-3xl font-semibold">Dashboard en temps réel</h4>
        <p class="mt-4 text-blue-100/90 text-sm">
          Interfaces sombres, cartes modulaires et composants natifs pour iOS & Android.
        </p>
      </div>
    </Fragment>
  </Hero2>

  <Features3
    id="sections"
    title="Sections clés"
    subtitle="Structure pensée pour maximiser les téléchargements."
    columns={3}
    items={[
      {
        title: 'Hero immersif',
        description: 'Capture d’écran mobile, titre impactant et CTA App Store / Google Play.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Fonctionnalités en trois points',
        description: 'Met en avant la valeur unique avec icônes animées et micro-copies.',
        icon: 'tabler:apps',
      },
      {
        title: 'Social proof locale',
        description: 'Avis clients romands, logos partenaires et notation moyenne.',
        icon: 'tabler:star',
      },
      {
        title: 'Plans tarifaires',
        description: 'Grille claire pour freemium, abonnement et offres entreprise.',
        icon: 'tabler:credit-card',
      },
      {
        title: 'FAQ dynamique',
        description: 'Réponses aux questions de sécurité, confidentialité et support.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'CTA final',
        description: 'Bloc contact + calendrier pour réserver une démonstration ou essai.',
        icon: 'tabler:calendar-event',
      },
    ]}
  />

  <Content
    id="flow"
    isReversed
    title="Parcours utilisateur"
    subtitle="Storytelling modulaire pour convaincre en quelques scrolls."
    items={[
      {
        title: 'Scénarios illustrés',
        description: 'Cartes présentant les trois cas d’usage principaux, adaptées au public romand.',
        icon: 'tabler:layout-board',
      },
      {
        title: 'Animation fluide',
        description: 'Transitions framer-motion intégrées, fluides sur mobile et desktop.',
        icon: 'tabler:player-play',
      },
      {
        title: 'Call-to-action flottant',
        description: 'Boutons fixes pour télécharger ou planifier une démo, toujours visibles.',
        icon: 'tabler:cursor-text',
      },
      {
        title: 'Bloc analytics',
        description: 'Visualise le taux de satisfaction, temps gagné et nombre d’utilisateurs actifs.',
        icon: 'tabler:chart-donut-3',
      },
    ]}
  >
    <Fragment slot="content">
      <p>
        Ce template est construit pour une conversion rapide : navigation courte, accroches percutantes et design premium.
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Mode clair & sombre</h4>
        <p class="mt-6 max-w-sm text-blue-100/90">
          Les composants Tailwind adaptatifs garantissent une cohérence sur tous les écrans.
        </p>
      </div>
    </Fragment>
  </Content>

  <Stats
    title="Indicateurs template"
    stats={[
      { title: 'Conversion beta → téléchargement', amount: '34%' },
      { title: 'Temps moyen sur page', amount: '2:45' },
      { title: 'Score Lighthouse mobile', amount: '95/100' },
      { title: 'Sections personnalisables', amount: '12' },
    ]}
  />

  <Testimonials
    title="Cas d’usage"
    testimonials={[
      {
        title: 'Planifia — Genève',
        testimonial:
          '“En adaptant ce template, nous avons lancé notre app de rendez-vous en une journée avec un design digne des grandes apps internationales.”',
        name: 'Mélanie Roch',
        position: 'Co-fondatrice',
      },
      {
        title: 'FitLéman — Lausanne',
        testimonial:
          '“Les CTA mobiles et la mise en avant des avis ont boosté nos téléchargements de 58 % dès la première semaine.”',
        name: 'Yannick Dutoit',
        position: 'CEO',
      },
    ]}
  />

  <FAQs
    id="faq"
    title="Questions fréquentes"
    subtitle="Tout pour un lancement mobile réussi."
    items={[
      {
        title: 'Peut-on intégrer les stores Apple et Google ?',
        description: 'Oui, les boutons renvoient vers vos fiches officielles et peuvent être trackés.',
      },
      {
        title: 'Le template est-il responsive ?',
        description: 'Chaque section est testée sur mobile, tablette et desktop. Animation adaptative incluse.',
      },
      {
        title: 'Comment personnaliser le design ?',
        description: 'Nous ajustons couleurs, icônes, contenus et connectons vos APIs en 24 h.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Déployer ce template',
        href: '/contact#form',
        icon: 'tabler:send',
      },
      {
        text: 'Télécharger la brochure',
        href: '/pricing',
      },
    ]}
  >
    <Fragment slot="title">Envie de lancer votre app en 24 h ?</Fragment>

    <Fragment slot="subtitle">Nos experts préparent le contenu, intègrent vos API et livrent une page prête à convertir.</Fragment>
  </CallToAction>
</Layout>
