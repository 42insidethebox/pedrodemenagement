---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Template SaaS & Plateformes',
  description: 'Page d’accueil MonWebsite.ch pour SaaS romands : métriques, intégrations et conversions B2B.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Template secteur — SaaS & plateformes"
    actions={[
      {
        variant: 'primary',
        text: 'Déployer le template',
        href: '/contact#form',
        icon: 'tabler:rocket',
      },
      { text: 'Voir le comparatif', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">SaaS Léman Analytics</span> — pipeline de conversion B2B
    </Fragment>

    <Fragment slot="subtitle">
      Un hero à fort impact, métriques en direct, preuve sociale et bloc démo pour transformer vos visiteurs en leads qualifiés.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[16/9] overflow-hidden rounded-2xl bg-gradient-to-br from-blue-700 via-slate-900 to-emerald-500 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Dashboard SaaS</p>
        <h4 class="mt-4 text-3xl font-semibold">Métriques en live</h4>
        <p class="mt-6 max-w-lg text-blue-100/90">
          Graphiques interactifs, cartes comparatives et intégrations CRM prêtes à l’emploi.
        </p>
      </div>
    </Fragment>
  </Hero2>

  <Features3
    title="Architecture"
    subtitle="Chaque bloc est pensé pour convaincre les décideurs."
    columns={3}
    items={[
      {
        title: 'Hero data-driven',
        description: 'Titre précis, sous-titre orienté valeur et call-to-action démo + essai gratuit.',
        icon: 'tabler:gauge',
      },
      {
        title: 'Section problématique',
        description: 'Expose les douleurs métiers avec pictogrammes et chiffres locaux.',
        icon: 'tabler:alert-circle',
      },
      {
        title: 'Fonctionnalités modulaires',
        description: 'Cartes modulaires regroupées par cas d’usage (ops, marketing, finance).',
        icon: 'tabler:layers-linked',
      },
      {
        title: 'Intégrations',
        description: 'Logos interactifs (SAP, Salesforce, ERP suisses) avec lien vers documentation.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Preuve sociale B2B',
        description: 'Logos clients, avis G2/Capterra et success stories Arc lémanique.',
        icon: 'tabler:stars',
      },
      {
        title: 'Bloc sécurité & conformité',
        description: 'Met en avant conformité LPD/RGPD, hébergement suisse et certifications ISO.',
        icon: 'tabler:shield-lock',
      },
    ]}
  />

  <Content
    id="demo"
    isReversed
    title="Flux de génération de leads"
    subtitle="Convaincre et capturer en un seul écran."
    items={[
      {
        title: 'Video walkthrough',
        description: 'Lecteur intégré (Vimeo/YouTube) avec transcript et CTA “Voir la démo complète”.',
        icon: 'tabler:player-play',
      },
      {
        title: 'Formulaire multi-étapes',
        description: 'Collecte entreprise, effectif et objectif en 3 champs avec intégration HubSpot.',
        icon: 'tabler:forms',
      },
      {
        title: 'Comparatif plans',
        description: 'Tableau comparatif Free / Pro / Enterprise avec badges et CTA alignés.',
        icon: 'tabler:columns',
      },
      {
        title: 'Bloc ROI',
        description: 'Calculateur dynamique du temps gagné et du retour sur investissement.',
        icon: 'tabler:chart-infographic',
      },
    ]}
  >
    <Fragment slot="content">
      <p>
        Ce template SaaS est optimisé pour les parcours desktop et mobile : CSS grid réactif, micro-interactions et chargement différé des vidéos.
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-500 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Score performance</h4>
        <p class="mt-6 max-w-sm text-emerald-100/90">
          Lighthouse 98 desktop / 94 mobile avec optimisation Tailwind + Astro.
        </p>
      </div>
    </Fragment>
  </Content>

  <Stats
    title="KPIs observés"
    stats={[
      { title: 'Taux de clic sur démo', amount: '41%' },
      { title: 'Conversion lead qualifié', amount: '19%' },
      { title: 'Temps moyen page', amount: '3:20' },
      { title: 'Sections personnalisables', amount: '14' },
    ]}
  />

  <FAQs
    title="Questions fréquentes"
    items={[
      {
        title: 'Peut-on intégrer un chatbot ?',
        description: 'Oui, intégration Intercom, Drift ou chatbot custom disponible en 24 h.',
      },
      {
        title: 'Support des langues ?',
        description: 'Français, anglais, allemand disponibles par défaut, autres langues sur demande.',
      },
      {
        title: 'Quelles données analytiques ?',
        description: 'Taggage Google Analytics 4, Matomo ou Plausible et suivi des conversions géré par nos équipes.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Planifier une démo',
        href: '/contact#form',
        icon: 'tabler:calendar',
      },
      {
        text: 'Voir le template startup',
        href: '/homes/startup',
      },
    ]}
  >
    <Fragment slot="title">Prêt à accélérer votre acquisition B2B ?</Fragment>

    <Fragment slot="subtitle">Nous personnalisons ce template SaaS à votre image et le mettons en ligne en moins de 24 h.</Fragment>
  </CallToAction>
</Layout>
