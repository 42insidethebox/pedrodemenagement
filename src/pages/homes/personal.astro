---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Template Artisan & Commerce',
  description:
    'Page vitrine MonWebsite.ch pour les artisans, commerces et indépendants romands — design épuré, storytelling local et réservations en ligne.',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Template secteur — Artisan & commerce"
    actions={[
      {
        variant: 'primary',
        text: 'Réserver ce template',
        href: '/contact#form',
        icon: 'tabler:calendar-event',
      },
      { text: 'Découvrir les packs', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Atelier du Léman</span> — vitrines locales prêtes à réserver
    </Fragment>

    <Fragment slot="subtitle">
      Un modèle pensé pour les restaurants, salons, boutiques et artisans, avec menus dynamiques, agenda en ligne et témoignages clients.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-2xl bg-gradient-to-br from-amber-400 via-orange-500 to-slate-900 p-10 text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-orange-100/80">Ambiance chaleureuse</p>
        <h4 class="mt-4 text-3xl font-semibold">Focus sur vos savoir-faire</h4>
        <p class="mt-6 max-w-sm text-orange-50/90">
          Photographies immersives, modules horaires et mise en avant de vos offres saisonnières.
        </p>
      </div>
    </Fragment>
  </Hero2>

  <Features3
    title="Modules inclus"
    subtitle="Chaque section est optimisée pour déclencher l’action."
    columns={3}
    items={[
      {
        title: 'Menu interactif',
        description: 'Cartes filtrables par catégorie, tarif et spécialité du jour.',
        icon: 'tabler:coffee',
      },
      {
        title: 'Bloc horaires smart',
        description: 'Affiche les disponibilités en temps réel et gère les périodes de vacances.',
        icon: 'tabler:clock',
      },
      {
        title: 'Réservation instantanée',
        description: 'Intégration Calendly, SimplyBook ou formulaire custom en 24 h.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Témoignages locaux',
        description: 'Avis clients vérifiés avec géolocalisation et photo portrait.',
        icon: 'tabler:quote',
      },
      {
        title: 'Promotions saisonnières',
        description: 'Bannières programmables et compte à rebours pour offres limitées.',
        icon: 'tabler:discount',
      },
      {
        title: 'Plan d’accès dynamique',
        description: 'Carte interactive, parking conseillé et intégration Google Reviews.',
        icon: 'tabler:map',
      },
    ]}
  />

  <Content
    isReversed
    title="Un parcours client ultra clair"
    subtitle="Du premier scroll à la réservation."
    items={[
      {
        title: 'Storytelling en trois blocs',
        description: 'Présente votre histoire, votre équipe et vos engagements durables.',
        icon: 'tabler:book',
      },
      {
        title: 'Galerie immersive',
        description: 'Grid responsive pour photos, vidéos et visite virtuelle 360°.',
        icon: 'tabler:photo',
      },
      {
        title: 'Call-to-action sticky',
        description: 'Bouton “Réserver” ou “Commander” fixé en bas de l’écran mobile.',
        icon: 'tabler:hand-click',
      },
      {
        title: 'Module FAQ RGPD',
        description: 'Rassure sur la sécurité, les paiements et les politiques d’annulation.',
        icon: 'tabler:shield',
      },
    ]}
  >
    <Fragment slot="content">
      <p>
        Les composants Tailwind adaptatifs assurent une expérience fluide sur mobile comme sur desktop, avec un accent sur la conversion locale.
      </p>
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-amber-500 p-10 text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-amber-200/80">Compatibilité mobile</p>
        <p class="mt-6 max-w-xs text-base text-amber-100/90">
          Optimisé pour les parcours “je découvre → je réserve” en moins d’une minute.
        </p>
      </div>
    </Fragment>
  </Content>

  <Testimonials
    title="Ils utilisent ce template"
    testimonials={[
      {
        title: 'Café des Arches — Lausanne',
        testimonial:
          '“Réservations en ligne, menus du jour et photos soignées : ce template nous a permis de tripler nos demandes en 2 semaines.”',
        name: 'Sophie Latour',
        position: 'Gérante',
      },
      {
        title: 'Atelier Marro — Vevey',
        testimonial:
          '“Nous avons pu présenter nos réalisations et gérer les demandes de devis directement depuis le site, sans effort.”',
        name: 'Paolo Marro',
        position: 'Artisan tapissier',
      },
    ]}
  />

  <FAQs
    title="FAQ template"
    items={[
      {
        title: 'Peut-on traduire le site ?',
        description: 'Oui, nous livrons ce template en FR, EN et DE avec contenu adapté.',
      },
      {
        title: 'Quelles intégrations sont disponibles ?',
        description: 'Réservation, commandes en ligne, bons cadeaux, gestion d’événements… nous connectons vos outils existants.',
      },
      {
        title: 'Combien de temps pour personnaliser ?',
        description: '24 h pour la première version, 48 h pour intégrer vos médias et valider les contenus.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Activer le template',
        href: '/contact#form',
        icon: 'tabler:check',
      },
      {
        text: 'Voir les autres modèles',
        href: '/homes/saas',
      },
    ]}
  >
    <Fragment slot="title">Prêt à remplir votre agenda ?</Fragment>

    <Fragment slot="subtitle">Nous livrons votre site d’artisan ou de commerce en 24 h, contenu et réservations comprises.</Fragment>
  </CallToAction>
</Layout>
