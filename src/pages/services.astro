  brandType === 'experience'
    ? lceT('Arc lémanique & Suisse', 'Lake Geneva & Switzerland', 'Genfersee & Schweiz', 'Lago Lemano & Svizzera', 'بحيرة ليمان وسويسرا', '莱蒙湖及瑞士')
    : lamT('Arc lémanique & Suisse', 'Lake Geneva & Switzerland', 'Genfersee & Schweiz', 'Lago Lemano & Svizzera');
const overlayOptionsTitle =
  brandType === 'experience'
    ? lceT('Options flexibles', 'Flexible options', 'Flexible Optionen', 'Opzioni flessibili', 'خيارات مرنة', '灵活选项')
    : lamT('Options flexibles', 'Flexible options', 'Flexible Optionen', 'Opzioni flessibili');
const overlayOptionsSubtitle =
  brandType === 'experience'
    ? lceT(
        'Nous adaptons l’équipe, le matériel et les créneaux horaires à vos contraintes de bail, d’ascenseur ou de route.',
        'We adapt crew, gear and slots to lease, lift or route constraints.',
        'Wir passen Team, Material und Slots an Miet-, Lift- oder Routen-Constraints an.',
