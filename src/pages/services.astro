---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getBrandFromHost } from '~/lib/brand';
import { BRANDS } from '~/lib/brands.config';
import { getImage, getImageAlt } from '~/data/imageInventory';
import { EXPERIENCES } from '~/data/experiences';
import { resolveLocaleFromRequest } from '~/lib/locale';

const host = Astro.request.headers.get('host');
const brandKey = getBrandFromHost(host);
if (brandKey === 'maisoncortes') {
  return Astro.redirect('/maison-cortes');
}

const isUrgent = brandKey === 'urgent';
const isTransport = brandKey === 'transport';
const isExperience = brandKey === 'laclemanexperience';
const isLausanne = brandKey === 'lausanne';
const brandType =
  isUrgent
    ? 'urgent'
    : isTransport
      ? 'transport'
      : brandKey === 'debarras'
        ? 'debarras'
        : brandKey === 'videmaison'
          ? 'videmaison'
          : brandKey === 'videsuccession'
            ? 'videsuccession'
            : brandKey === 'nettoyagesuccession' || brandKey === 'lausannenettoyage'
              ? 'clean'
              : brandKey === 'etatdeslieux'
                ? 'etatdeslieux'
                : brandKey === 'laclemanexperience'
                  ? 'experience'
                  : 'move';
const brand = BRANDS[brandKey] || BRANDS.pedro;
const whatsapp = (brand?.whatsapp || 'https://wa.me/41767982793');

const experienceFormats = [
  { title: 'Demi-journée', description: '2–4h · 2–6 pers. · Couples, VIP visiteurs', icon: 'tabler:clock-hour-4' },
  { title: 'Journée', description: '5–8h · 2–8 pers. · Découverte complète', icon: 'tabler:calendar-time' },
  { title: 'Soirée signature', description: '3–4h · 2–10 pers. · Dîner, célébration', icon: 'tabler:moon-stars' },
  { title: 'Immersion', description: '2–3 jours · 2–6 pers. · UHNW, corporate', icon: 'tabler:route' },
];

const experienceConcierge = [
  { title: 'Interlocuteur unique', description: 'WhatsApp + téléphone, réponse rapide J-7 → J+1', icon: 'tabler:headset' },
  { title: 'Brief écrit', description: 'Partagé aux bateliers, vignerons, chefs locaux. Pas d’improvisation.', icon: 'tabler:clipboard-list' },
  { title: 'Plan B météo', description: 'Validé à l’avance, expérience maintenue sans perte de qualité.', icon: 'tabler:cloud-check' },
];

const experienceLogistics = [
  { title: 'Créneaux verrouillés', description: 'Sunset, transferts porte-à-porte, tampons horaires intégrés.', icon: 'tabler:clock-check' },
  { title: 'Transferts privés', description: 'Mercedes V/E, bateau-taxi si pertinent, chauffeurs brieffés.', icon: 'tabler:car' },
  { title: 'Autorisations & privatisations', description: 'Caves, bateaux, tables d’hôtes réellement privatisés.', icon: 'tabler:lock-square-rounded' },
];

const experienceCommitments = [
  { title: 'Privatisation réelle', description: 'Jamais de mélange de groupes.', icon: 'tabler:shield-lock' },
  { title: 'Horaires respectés', description: 'Ou compensation si décalage.', icon: 'tabler:clock-bolt' },
  { title: 'Partenaires directs', description: 'Réseau local (bateliers, vignerons, chefs) sans intermédiaire.', icon: 'tabler:users' },
  { title: 'Plan B météo', description: 'Alternatives prêtes et validées.', icon: 'tabler:umbrella' },
];

const categoryIcons: Record<string, string> = {
  lac: 'tabler:sailboat',
  gastronomy: 'tabler:chef-hat',
  wine: 'tabler:glass-full',
  mountain: 'tabler:mountain',
  city: 'tabler:building-community',
  wellness: 'tabler:leaf',
  winter: 'tabler:snowflake',
  corporate: 'tabler:briefcase-2',
  meta: 'tabler:map',
};
const heroImageId =
  isUrgent
    ? 'e_cat_truck_mountains_lake_00'
    : isTransport
      ? 'professional_van_1'
    : brandKey === 'debarras'
      ? 'van_inside_objects_boxes_1'
      : brandKey === 'videmaison'
        ? 'strong_man_packing_1'
          : brandKey === 'videsuccession'
            ? 'empty_apartment_3'
            : brandKey === 'nettoyagesuccession' || brandKey === 'lausannenettoyage'
              ? 'professional_cleanerd_floor'
          : brandKey === 'etatdeslieux'
            ? 'empty_apartment_2'
            : brandKey === 'laclemanexperience'
              ? 'silent_boat_still_lake'
              : 'hero_happy_boxes_plants';
const heroImage = getImage(heroImageId);
const heroAlt = getImageAlt(heroImageId);
const defaultLocale = brandKey === 'laclemanexperience' ? 'en' : 'fr';
const locale = resolveLocaleFromRequest(Astro.request, defaultLocale);
const lang = isExperience
  ? (['fr', 'en', 'de', 'it', 'ar', 'zh'].includes(locale) ? locale : defaultLocale)
  : isLausanne
    ? (['fr', 'en', 'de', 'it', 'ar', 'zh'].includes(locale) ? locale : 'fr')
    : 'fr';
const isEn = lang === 'en';
const isDe = lang === 'de';
const isIt = lang === 'it';
const isAr = lang === 'ar';
const isZh = lang === 'zh';
const lceT = <T,>(fr: T, en: T, de: T, it: T, ar?: T, zh?: T): T => {
  if (!isExperience) return fr;
  if (isEn) return en;
  if (isDe) return de;
  if (isIt) return it;
  if (isAr && ar !== undefined) return ar;
  if (isZh && zh !== undefined) return zh;
  return fr;
};
const lamT = <T,>(fr: T, en: T, de: T, it: T): T => {
  if (!isLausanne) return fr;
  if (isEn) return en;
  if (isDe) return de;
  if (isIt) return it;
  return fr;
};
const experienceCards = isExperience
  ? EXPERIENCES.map((exp) => {
      const title =
        isAr && exp.titleAr ? exp.titleAr : isZh && exp.titleZh ? exp.titleZh : exp.title;
      const description =
        isAr && exp.descriptionAr
          ? exp.descriptionAr
          : isZh && exp.descriptionZh
            ? exp.descriptionZh
            : exp.description;
      const price =
        isAr && exp.priceBandAr ? exp.priceBandAr : isZh && exp.priceBandZh ? exp.priceBandZh : exp.priceBand;

      return {
        title,
        description: `${description} · ${exp.duration} · ${price}`,
        icon: categoryIcons[exp.category] || 'tabler:sparkles',
        category: exp.category,
        season: exp.season,
      };
    })
  : [];

const signatureExperiences = experienceCards.filter((exp) =>
  ['lac', 'gastronomy', 'wine', 'mountain'].includes(exp.category)
).slice(0, 6);
const slowExperiences = experienceCards.filter((exp) => ['wellness', 'city', 'lac'].includes(exp.category)).slice(0, 6);
const winterExperiences = experienceCards.filter((exp) => exp.season === 'winter').slice(0, 5);
const corporateExperiences = experienceCards.filter((exp) => ['corporate', 'meta'].includes(exp.category)).slice(0, 4);

const experienceFormatsData = lceT(
  experienceFormats,
  [
    { title: 'Half-day', description: '2–4h · 2–6 ppl · Couples, VIP visitors', icon: 'tabler:clock-hour-4' },
    { title: 'Full day', description: '5–8h · 2–8 ppl · Complete discovery', icon: 'tabler:calendar-time' },
