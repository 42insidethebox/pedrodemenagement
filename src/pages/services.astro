    { title: '单一礼宾', description: 'WhatsApp+电话，J-7 至 J+1 及时响应。', icon: 'tabler:headset' },
    { title: '书面简报', description: '分享给船长、酒农、主厨，零即兴。', icon: 'tabler:clipboard-list' },
    { title: '天气B案', description: '提前确认，体验质量不打折。', icon: 'tabler:cloud-check' },
  ]
);
const experienceLogisticsData = lceT(
  experienceLogistics,
  [
    { title: 'Locked slots', description: 'Sunset timings, door-to-door transfers, buffer times.', icon: 'tabler:clock-check' },
    { title: 'Private transfers', description: 'Mercedes V/E, boat taxi if relevant, briefed drivers.', icon: 'tabler:car' },
    { title: 'Permits & privatisations', description: 'Cellars, boats, hosted tables truly privatised.', icon: 'tabler:lock-square-rounded' },
  ],
  [
    { title: 'Fixe Slots', description: 'Sunset-Zeiten, Tür-zu-Tür-Transfers, Pufferzeiten.', icon: 'tabler:clock-check' },
    { title: 'Private Transfers', description: 'Mercedes V/E, Bootstaxi falls sinnvoll, gebriefte Fahrer.', icon: 'tabler:car' },
    { title: 'Bewilligungen & Privatisierungen', description: 'Keller, Boote, Gastgebertafeln wirklich privat.', icon: 'tabler:lock-square-rounded' },
  ],
  [
    { title: 'Slot bloccati', description: 'Orari sunset, transfer door-to-door, tempi cuscinetto.', icon: 'tabler:clock-check' },
    { title: 'Transfer privati', description: 'Mercedes V/E, taxi boat se serve, autisti briefati.', icon: 'tabler:car' },
    { title: 'Permessi & privatizzazioni', description: 'Cantine, barche, tavole davvero privatizzate.', icon: 'tabler:lock-square-rounded' },
