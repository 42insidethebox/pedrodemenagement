const experienceCommitmentsData = lceT(
  experienceCommitments,
  [
    { title: 'Real privatisation', description: 'Never mixing groups.', icon: 'tabler:shield-lock' },
    { title: 'Timing respected', description: 'Or compensated.', icon: 'tabler:clock-bolt' },
    { title: 'Direct partners', description: 'Local skippers, winemakers, chefs.', icon: 'tabler:users' },
    { title: 'Weather plan B', description: 'Alternatives ready and validated.', icon: 'tabler:umbrella' },
  ],
  [
    { title: 'Echte Privatisierung', description: 'Keine Gruppendurchmischung.', icon: 'tabler:shield-lock' },
    { title: 'Timing eingehalten', description: 'Oder kompensiert.', icon: 'tabler:clock-bolt' },
    { title: 'Direkte Partner', description: 'Lokale Skipper, Winzer, Köche.', icon: 'tabler:users' },
    { title: 'Wetter-Plan B', description: 'Alternativen bereit und validiert.', icon: 'tabler:umbrella' },
  ],
  [
    { title: 'Vera privatizzazione', description: 'Mai gruppi mescolati.', icon: 'tabler:shield-lock' },
    { title: 'Timing rispettato', description: 'O compensato.', icon: 'tabler:clock-bolt' },
    { title: 'Partner diretti', description: 'Skipper, vignaioli, chef locali.', icon: 'tabler:users' },
