---
import Shell from '~/tenants/maison-cortes/ui/Shell.astro';
import { maisonCortesCopy } from '~/tenants/maison-cortes/copy';

const metadata = {
  title: 'MAISON CORTES — Protocoles',
  description: 'Procédures d’émission, de contrôle matière et d’expédition pour chaque objet classifié.',
  ignoreTitleTemplate: true,
};

const protocols = [
  {
    title: 'Dossier',
    lines: ['Ville, objet et index fixés avant publication.', 'Spécifications publiées en clair.', 'Pas de séries parallèles.'],
  },
  {
    title: 'Matière',
    lines: [
      'Alliages et placage indiqués.',
      'Diamants de laboratoire indiqués explicitement.',
      'Pas de gradients, pas de traitements cosmétiques.',
    ],
  },
  {
    title: 'Contrôle',
    lines: ['Inspection visuelle.', 'Numéro gravé ou gravure laser quand indiqué.', 'Rejet si variation de teinte visible.'],
  },
  {
    title: 'Conditionnement',
    lines: ['Pochette neutre.', 'Fiche de spécifications jointe.', 'Aucun support lifestyle.'],
  },
];

const handling = [
  {
    title: 'Manipulation',
    lines: ['Port de gants pour toute manipulation.', 'Pas de polissage additionnel.', 'Objet présenté sans décor.'],
  },
  {
    title: 'Transport',
    lines: ['Expédition Suisse uniquement.', 'Emballage compact, rembourrage neutre.', 'Pas de message promotionnel.'],
  },
  {
    title: 'Données',
    lines: ['Aucune création de compte.', 'Coordonnées utilisées uniquement pour l’expédition.', 'Pas de relance marketing.'],
  },
];
---

<Shell metadata={metadata} title="Protocoles" subtitle="Procédures d’émission et d’expédition">
  <section class="mc-section">
    <p class="mc-note-inline">{maisonCortesCopy.lead}</p>
    <ul class="mc-quiet-list">
      <li>Neutralité. Pas de comparaisons.</li>
      <li>Pas de promotions. Pas de remises.</li>
      <li>Prix en CHF. Expédition Suisse.</li>
    </ul>
  </section>

  <section class="mc-section">
    <h2>Procédures</h2>
    <div class="mc-columns">
      {protocols.map((item) => (
        <article class="mc-block">
          <h3>{item.title}</h3>
          <ul class="mc-quiet-list">
            {item.lines.map((line) => (
              <li>{line}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </section>

  <section class="mc-section">
    <h2>Manipulation & Transport</h2>
    <div class="mc-columns">
      {handling.map((item) => (
        <article class="mc-block">
          <h3>{item.title}</h3>
          <ul class="mc-quiet-list">
            {item.lines.map((line) => (
              <li>{line}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
    <p class="mc-note-inline">Pas d’effets visuels. Pas de narration. Pas d’urgence.</p>
  </section>
</Shell>

<style>
  .mc-block {
    border-top: 1px solid var(--mc-border);
    padding-top: 12px;
    display: grid;
    gap: 8px;
  }

  .mc-block h3 {
    letter-spacing: 0.1em;
  }
</style>
