---
import Shell from '~/tenants/maison-cortes/ui/Shell.astro';
import { maisonCortesConfig } from '~/tenants/maison-cortes/config';
import { maisonCortesCopy } from '~/tenants/maison-cortes/copy';
import { maisonCortesProducts } from '~/tenants/maison-cortes/products';

const metadata = {
  title: 'MAISON CORTES — Tarifs',
  description: 'Tarifs en CHF, expédition Suisse, aucune promotion.',
  ignoreTitleTemplate: true,
};
---

<Shell metadata={metadata} title="Tarifs" subtitle="CHF. Aucun programme promotionnel.">
  <section class="mc-section">
    <h2>Objets</h2>
    <div class="mc-grid">
      {maisonCortesProducts.map((product) => (
        <div class="mc-price-row" style={`--accent: ${product.accent ?? 'var(--mc-muted)'};`}>
          <div>
            <p class="mc-classification">
              <span class="mc-city">{product.city}</span>
              <span aria-hidden="true"> / </span>
              <span class="mc-object">{product.object} {product.index}</span>
            </p>
            <p class="mc-note-inline">{product.specs[0]}</p>
          </div>
          <div class="mc-price">CHF {product.priceChf}.–</div>
        </div>
      ))}
    </div>
  </section>

  <section class="mc-section">
    <h2>Frais</h2>
    <ul class="mc-quiet-list">
      <li>Expédition Suisse : CHF {maisonCortesConfig.shipping.flatFee}.– forfaitaire.</li>
      <li>Aucune remise. Aucun bundle. Aucune livraison express.</li>
      <li>Facturation et paiement en CHF uniquement.</li>
    </ul>
  </section>

  <section class="mc-section">
    <h2>Paiement</h2>
    <ul class="mc-quiet-list">
      <li>Stripe Checkout. Cartes principales acceptées.</li>
      <li>Adresse de facturation requise. Pas de compte à créer.</li>
      <li>Confirmation Stripe avant préparation.</li>
    </ul>
    <p class="mc-note-inline">{maisonCortesCopy.shippingLine}</p>
  </section>

  <section class="mc-section">
    <h2>Politique</h2>
    <ul class="mc-quiet-list">
      <li>Catalogue informatif. Objets émis à l’unité.</li>
      <li>Pas de marketing relationnel. Pas de relance automatique.</li>
      <li>Pour toute correction de fiche, écrire à {maisonCortesCopy.contactEmail}.</li>
    </ul>
  </section>
</Shell>

<style>
  .mc-price-row {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    padding-top: 10px;
    border-top: 1px solid var(--mc-border);
    align-items: baseline;
  }

  .mc-price {
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }
</style>
