---
import Shell from '~/tenants/maison-cortes/ui/Shell.astro';
import { maisonCortesCities } from '~/tenants/maison-cortes/products';

const metadata = {
  title: 'MAISON CORTES â€” Catalogue',
  description: 'Catalogue.',
  ignoreTitleTemplate: true,
};

export const prerender = false;
---

<Shell metadata={metadata}>
  <section class="mc-section">
    <ul class="mc-city-list">
      {maisonCortesCities.map((city) => (
        <li>
          <a href={`/maison-cortes/${city.slug}`}>{city.name}</a>
        </li>
      ))}
    </ul>
  </section>
</Shell>

<style>
  .mc-city-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 12px;
    font-size: clamp(20px, 3vw, 28px);
    letter-spacing: 0.18em;
    text-transform: uppercase;
  }
</style>
