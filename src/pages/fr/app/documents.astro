---
import BackendLayout from '~/layouts/BackendLayout.astro';
---

<BackendLayout pageTitle="Documents">
  <section class="space-y-8">
    <div class="rounded-2xl border border-slate-200 bg-white px-6 py-6 shadow-md shadow-slate-200/60 dark:border-slate-800 dark:bg-slate-900/40 dark:shadow-lg dark:shadow-slate-950/40">
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Enregistrer un document</h2>
      <p class="mt-2 text-sm text-slate-600 dark:text-slate-400">Suivez propositions, contrats, briefs et assets dans un seul système.</p>
      <form id="document-form" class="mt-6 grid gap-4 lg:grid-cols-2">
        <div>
          <label class="block text-sm text-slate-600 dark:text-slate-300" for="title">Titre</label>
          <input id="title" name="title" required class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/40 dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
        </div>
        <div>
          <label class="block text-sm text-slate-600 dark:text-slate-300" for="document_type">Type</label>
          <select id="document_type" name="document_type" class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/40 dark:border-slate-800 dark:bg-slate-950 dark:text-white">
            <option value="proposal">Proposition</option>
            <option value="contract">Contrat</option>
            <option value="brief">Brief</option>
            <option value="report">Rapport</option>
            <option value="asset">Asset</option>
          </select>
        </div>
        <div>
          <label class="block text-sm text-slate-600 dark:text-slate-300" for="status">Statut</label>
          <select id="status" name="status" class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/40 dark:border-slate-800 dark:bg-slate-950 dark:text-white">
            <option value="draft">Brouillon</option>
            <option value="sent">Envoyé</option>
            <option value="signed">Signé</option>
            <option value="archived">Archivé</option>
          </select>
        </div>
        <div>
          <label class="block text-sm text-slate-600 dark:text-slate-300" for="storage_path">Chemin ou URL de stockage</label>
          <input id="storage_path" name="storage_path" required class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/40 dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
        </div>
        <div class="lg:col-span-2">
          <label class="block text-sm text-slate-600 dark:text-slate-300" for="metadata">Métadonnées (JSON)</label>
          <textarea id="metadata" name="metadata" rows="3" placeholder='{"key":"value"}' class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/40 dark:border-slate-800 dark:bg-slate-950 dark:text-white"></textarea>
        </div>
        <div class="lg:col-span-2 flex items-center gap-3">
          <button id="document-submit" type="submit" class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md shadow-blue-500/30 transition hover:bg-blue-500 disabled:cursor-not-allowed disabled:opacity-70">Enregistrer le document</button>
          <p id="document-message" class="text-sm text-slate-600 dark:text-slate-400"></p>
        </div>
      </form>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white px-6 py-6 shadow-md shadow-slate-200/60 dark:border-slate-800 dark:bg-slate-900/40 dark:shadow-lg dark:shadow-slate-950/40">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Référentiel</h2>
        <span class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400">Base de connaissances</span>
      </div>
      <div class="mt-6 overflow-x-auto">
        <table class="min-w-full text-left text-sm">
          <thead class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400">
            <tr>
              <th class="px-4 py-3">Titre</th>
              <th class="px-4 py-3">Type</th>
              <th class="px-4 py-3">Statut</th>
              <th class="px-4 py-3">Stockage</th>
              <th class="px-4 py-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody id="document-table" class="divide-y divide-slate-200 dark:divide-slate-800 text-slate-700 dark:text-slate-200">
            <tr>
              <td colspan="5" class="px-4 py-6 text-center text-sm text-slate-600 dark:text-slate-400">Chargement des documents…</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</BackendLayout>

<script type="module">
  import { authFetch } from '~/utils/backend/api';

  const form = document.getElementById('document-form');
  const message = document.getElementById('document-message');
  const submitButton = document.getElementById('document-submit');
  const tableBody = document.getElementById('document-table');

  const safeParseMetadata = (value) => {
    if (!value.trim()) return {};
    try {
      const parsed = JSON.parse(value);
      if (typeof parsed === 'object' && parsed !== null && !Array.isArray(parsed)) {
        return parsed;
      }
    } catch (error) {
      console.error('Invalid metadata JSON', error);
    }
    throw new Error('Les métadonnées doivent être un JSON valide représentant un objet.');
  };

  const renderDocuments = (docs) => {
    if (!tableBody) return;
    tableBody.innerHTML = '';

    if (!Array.isArray(docs) || docs.length === 0) {
      tableBody.innerHTML = '<tr><td colspan="5" class="px-4 py-6 text-center text-sm text-slate-600 dark:text-slate-400">Aucun document pour le moment. Ajoutez-en un ci-dessus.</td></tr>';
      return;
    }

    docs.forEach((doc) => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td class="px-4 py-3">
          <div class="font-medium text-slate-900 dark:text-white">${doc.title}</div>
          <div class="text-xs text-blue-600 dark:text-blue-400 truncate"><a href="${doc.storage_path}" target="_blank" rel="noreferrer" class="hover:underline">${doc.storage_path}</a></div>
        </td>
        <td class="px-4 py-3 text-sm capitalize">${doc.document_type}</td>
        <td class="px-4 py-3"><span class="inline-flex rounded-full bg-slate-100 dark:bg-slate-800 px-2.5 py-1 text-xs capitalize text-slate-700 dark:text-slate-200">${doc.status}</span></td>
        <td class="px-4 py-3 text-xs text-slate-500 dark:text-slate-300">${JSON.stringify(doc.metadata ?? {})}</td>
        <td class="px-4 py-3 text-right">
          <button data-delete="${doc.id}" class="rounded-lg border border-red-200 px-3 py-1 text-xs text-red-600 transition hover:bg-red-50 dark:border-red-500/40 dark:text-red-300 dark:hover:bg-red-500/10">Supprimer</button>
        </td>`;
      tableBody.appendChild(row);
    });
  };

  const loadDocuments = async () => {
    try {
      const response = await authFetch('/documents');
      renderDocuments(response.documents ?? []);
    } catch (error) {
      console.error(error);
      if (tableBody) {
        tableBody.innerHTML = '<tr><td colspan="5" class="px-4 py-6 text-center text-sm text-red-400">Impossible de charger les documents.</td></tr>';
      }
    }
  };

  if (form) {
    form.addEventListener('submit', async (event) => {
      event.preventDefault();
      if (message) {
        message.classList.remove('text-red-400', 'text-blue-600', 'dark:text-blue-400');
        message.textContent = '';
      }
      if (submitButton) {
        submitButton.classList.add('animate-pulse');
        submitButton.disabled = true;
      }

      const formData = new FormData(form);
      try {
        const metadata = safeParseMetadata(String(formData.get('metadata') ?? ''));
        const payload = {
          title: String(formData.get('title') ?? '').trim(),
          document_type: String(formData.get('document_type') ?? 'proposal'),
          status: String(formData.get('status') ?? 'draft'),
          storage_path: String(formData.get('storage_path') ?? '').trim(),
          metadata,
        };

        await authFetch('/documents', {
          method: 'POST',
          body: JSON.stringify(payload),
        });
        if (message) {
          message.classList.add('text-blue-600', 'dark:text-blue-400');
          message.textContent = 'Document enregistré.';
        }
        form.reset();
        await loadDocuments();
      } catch (error) {
        console.error(error);
        if (message) {
          message.classList.add('text-red-400');
          message.textContent = error instanceof Error ? error.message : 'Échec de l'enregistrement du document.';
        }
      } finally {
        if (submitButton) {
          submitButton.classList.remove('animate-pulse');
          submitButton.disabled = false;
        }
      }
    });
  }

  if (tableBody) {
    tableBody.addEventListener('click', async (event) => {
      const target = event.target;
      if (!(target instanceof HTMLElement)) return;
      const deleteId = target.getAttribute('data-delete');
      if (!deleteId) return;

      target.classList.add('animate-pulse');
      try {
        await authFetch(`/documents/${deleteId}`, {
          method: 'DELETE',
          parseJson: false,
        });
        await loadDocuments();
      } catch (error) {
        console.error(error);
      }
    });
  }

  await loadDocuments();
</script>
