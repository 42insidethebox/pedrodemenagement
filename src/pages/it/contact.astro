---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contatto',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Contatto"
    title="Organizziamo il tuo lancio"
    subtitle="Un esperto MonWebsite.ch risponde entro 2 ore lavorative."
  />

  <ContactUs
    id="form"
    title="Richiedi demo o preventivo"
    subtitle="Compila il form: ti ricontattiamo via telefono o video per preparare il go-live in 24 ore."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nome e cognome',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email professionale',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Azienda',
      },
      {
        type: 'select',
        name: 'service',
        label: 'Pacchetto desiderato',
        options: [
          { label: 'Express 24 h', value: 'express' },
          { label: 'Signature', value: 'signature' },
          { label: 'Continuum', value: 'continuum' },
          { label: 'Personalizzato / da definire', value: 'custom' },
        ],
      },
    ]}
    textarea={{
      label: 'Il tuo progetto',
      placeholder: 'Raccontaci attività, obiettivi e tempistiche.',
    }}
    disclaimer={{
      label:
        'Inviando il form, autorizzi MonWebsite.ch a trattare i tuoi dati per rispondere alla richiesta secondo la privacy policy.',
    }}
    description="Uffici aperti dal lunedì al sabato, 8–18. Parliamo francese, italiano, tedesco e inglese."
  />

  <Features2
    title="Contattaci direttamente"
    subtitle="Scegli il canale più comodo per te."
    items={[
      {
        title: 'Telefono',
        description: '+41 21 555 24 24',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'hello@monwebsite.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'WhatsApp Business',
        description: '+41 79 555 24 24',
        icon: 'tabler:brand-whatsapp',
      },
      {
        title: 'Indirizzo',
        description: 'Rue du Grand-Chêne 8, 1003 Losanna',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Orari',
        description: 'Lunedì–Sabato, 08:00 – 18:00',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Supporto clienti',
        description: 'support@monwebsite.ch — risposta in < 2 h',
        icon: 'tabler:help',
      },
    ]}
  />
</Layout>
