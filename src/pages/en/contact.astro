---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Contact"
    title="Let’s plan your turnkey launch"
    subtitle="A MonWebsite.ch expert answers within 2 working hours."
  />

  <ContactUs
    id="form"
    title="Request a demo or quote"
    subtitle="Fill in the form and we will reach out by phone or video call to prepare your 24 h go-live."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Business email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
      {
        type: 'select',
        name: 'service',
        label: 'Desired plan',
        options: [
          { label: 'Express 24 h', value: 'express' },
          { label: 'Signature', value: 'signature' },
          { label: 'Continuum', value: 'continuum' },
          { label: 'Custom / to be defined', value: 'custom' },
        ],
      },
    ]}
    textarea={{
      label: 'Your project',
      placeholder: 'Share your activity, objectives and timeline.',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree that MonWebsite.ch processes your data to answer your request, according to our privacy policy.',
    }}
    description="Offices open Monday to Saturday, 8am–6pm. We speak French, English and German."
  />

  <Features2
    title="Talk to us directly"
    subtitle="Choose the channel that suits you best."
    items={[
      {
        title: 'Phone',
        description: '+41 21 555 24 24',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'hello@monwebsite.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'WhatsApp Business',
        description: '+41 79 555 24 24',
        icon: 'tabler:brand-whatsapp',
      },
      {
        title: 'Address',
        description: 'Rue du Grand-Chêne 8, 1003 Lausanne',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Opening hours',
        description: 'Monday to Saturday, 8:00 – 18:00',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Client support',
        description: 'support@monwebsite.ch — response in &lt; 2 h',
        icon: 'tabler:help',
      },
    ]}
  />
</Layout>
