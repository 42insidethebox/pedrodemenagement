---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'À propos',
};
---

<Layout metadata={metadata}>
  <Hero tagline="À propos de Pedro Déménagement">
    <Fragment slot="title">Une équipe lémanique pour des déménagements soignés</Fragment>

    <Fragment slot="subtitle">
      Basés à Lausanne et actifs sur tout l’Arc lémanique, nous orchestrons des déménagements résidentiels et professionnels
      avec un chef d’équipe dédié, du matériel de protection complet et une communication claire avant le jour J.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[5/3] overflow-hidden rounded-2xl bg-gradient-to-br from-blue-700 via-slate-900 to-slate-800 p-10 text-left text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Arc lémanique</p>
        <h4 class="mt-4 text-4xl font-semibold">Genève · Lausanne · Riviera · Valais</h4>
        <p class="mt-6 max-w-xl text-lg text-blue-100/90">
          Camions 20–30 m³, protections, sangles et chariots adaptés pour appartements, maisons et bureaux.
        </p>
      </div>
    </Fragment>
  </Hero>

  <Stats
    title="Nos repères"
    stats={[
      { title: 'Expérience', amount: '8+ ans' },
      { title: 'Zone', amount: 'Suisse romande' },
      { title: 'Délai devis', amount: 'sous 24h' },
    ]}
  />

  <Features3
    title="Notre manière de travailler"
    subtitle="Organisation claire, matériel adapté et communication transparente."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Planification',
        description: 'Repérage des accès, estimation du volume, choix du camion et de l’équipe.',
        icon: 'tabler:calendar-time',
      },
      {
        title: 'Protection',
        description: 'Housses matelas, couvertures, sangles, chariots, diables et outillage complet.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Suivi dédié',
        description: 'Un interlocuteur unique avant et pendant le déménagement pour éviter les surprises.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Équipe locale',
        description: 'Déménageurs basés entre Genève et Lausanne, disponibles en semaine et le samedi.',
        icon: 'tabler:users',
      },
      {
        title: 'Accès difficiles',
        description: 'Monte-meubles, réservations de places de parc et coordination ascenseur.',
        icon: 'tabler:stairs-up',
      },
      {
        title: 'Objets lourds',
        description: 'Pianos, coffres, frigos américains ou armoires massives gérés avec soin.',
        icon: 'tabler:weight',
      },
      {
        title: 'Assurance RC pro',
        description: 'Responsabilité civile professionnelle incluse, options complémentaires sur demande.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Communication claire',
        description: 'Créneau confirmé 48h avant, rappel des accès et des points sensibles.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Éco-gestes',
        description: 'Réutilisation des protections, tri et reprise des cartons quand c’est possible.',
        icon: 'tabler:recycle',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative visual-card aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 text-white shadow-xl">
        <div class="relative visual-card-body p-10">
          <p class="text-sm uppercase tracking-[0.3em] text-blue-200/80">Présence locale</p>
          <p class="mt-4 max-w-sm text-lg text-blue-100/90">
            Une équipe basée en Suisse romande, habituée aux accès urbains comme aux routes alpines.
          </p>
        </div>
      </div>
    </Fragment>
  </Features3>

  <Steps2
    title="Nos valeurs"
    subtitle="Fiabilité, proximité et transparence pour chaque déménagement."
    items={[
      {
        title: 'Précision',
        description: 'Check-list des accès, protections adaptées et respect des horaires convenus.',
      },
      {
        title: 'Clarté',
        description: 'Devis détaillé, TVA incluse et suivi simple par téléphone ou email.',
      },
      {
        title: 'Proximité',
        description: 'Chef d’équipe identifié, capable de décider rapidement en cas d’imprévu.',
      },
    ]}
  />
</Layout>
