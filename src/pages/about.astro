---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'À propos',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="À propos de MonWebsite.ch">
    <Fragment slot="title">
      Une équipe lémanique qui marie automatisation et service humain
    </Fragment>

    <Fragment slot="subtitle">
      MonWebsite.ch est née à Lausanne pour offrir aux PME et indépendants un site web haut de gamme, livré rapidement et sans
      sacrifier la précision ni l’accompagnement. Nous combinons une technologie propriétaire et des experts locaux pour garantir
      un résultat impeccable.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[5/3] overflow-hidden rounded-2xl bg-gradient-to-br from-blue-700 via-slate-900 to-slate-800 p-10 text-left text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Arc Lémanique</p>
        <h4 class="mt-4 text-4xl font-semibold">Lausanne · Genève · Vevey · Montreux</h4>
        <p class="mt-6 max-w-xl text-lg text-blue-100/90">
          Des spécialistes du digital, du contenu et de la performance web réunis autour d’un objectif&nbsp;: créer des sites irréprochables pour les acteurs locaux.
        </p>
      </div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Nos repères"
    stats={[
      { title: 'Rayon d’action', amount: 'Arc lémanique' },
      { title: 'Approche', amount: 'Automatisation + humain' },
      { title: 'Maintenance', amount: 'Option 79 CHF/mois' },
      { title: 'Langues', amount: 'FR · EN · DE' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Nos piliers"
    subtitle="Nous appliquons la rigueur suisse à chaque projet livré."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Automatisation maîtrisée',
        description:
          'Nos pipelines propriétaires orchestrent contenus, design et déploiement pour accélérer chaque projet sans sacrifier la qualité.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Design minimaliste',
        description:
          'Inspirés par les codes helvétiques, nous misons sur des mises en page aérées, typographies nettes et contrastes précis.',
        icon: 'tabler:layout-grid',
      },
      {
        title: 'Relation de proximité',
        description:
          'Nos chefs de projet sont disponibles par téléphone ou WhatsApp pour un suivi attentif, même après la mise en ligne.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Tech suisse + mondiale',
        description:
          'Stack Astro, Tailwind et hébergement basé en Suisse pour conjuguer souveraineté et performance internationale.',
        icon: 'tabler:world',
      },
      {
        title: 'Partenaires terrain',
        description:
          'Réseau de photographes, rédacteurs et consultants basés entre Genève et Montreux selon les besoins des projets.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Culture de la mesure',
        description:
          'Nous analysons l’impact de chaque livraison et proposons des pistes d’amélioration adaptées à votre activité.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Support multilingue',
        description:
          'Nous répondons en français, anglais ou allemand selon la préférence de vos équipes.',
        icon: 'tabler:language',
      },
      {
        title: 'Respect du RGPD suisse/UE',
        description:
          'Documentation juridique fournie, consentements gérés et données hébergées sur territoire helvétique.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Esprit durable',
        description:
          'Sélection de partenaires responsables et optimisation des ressources pour réduire l’empreinte carbone de chaque site.',
        icon: 'tabler:leaf',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.3em] text-blue-200/80">Présence locale</p>
        <p class="mt-4 max-w-sm text-lg text-blue-100/90">
          Nous opérons depuis Lausanne, Genève, Vevey et Montreux pour rester au plus proche des réalités terrain de nos clients.
        </p>
      </div>
    </Fragment>
  </Features3>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Nos valeurs"
    subtitle="Nous croyons à une technologie qui sert le business local, avec transparence et fiabilité."
    items={[
      {
        title: 'Précision',
        description:
          'Chaque ligne de contenu et chaque pixel sont vérifiés par un contrôle qualité humain avant mise en production.',
      },
      {
        title: 'Clarté',
        description:
          'Des offres tout inclus, des factures suisses et des indicateurs partagés en temps réel avec nos clients.',
      },
      {
        title: 'Proximité',
        description:
          'Nous accompagnons nos clients sur la durée avec un interlocuteur dédié et des points trimestriels offerts.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Notre histoire"
    subtitle="Nous construisons une plateforme capable de livrer des sites irréprochables sans compromis sur l’accompagnement."
    isReversed={true}
    callToAction={{
      text: 'Découvrir nos offres',
      href: '/pricing',
    }}
    items={[
      {
        title: '2021 — Lancement',
        description: 'Création de MonWebsite.ch à Lausanne avec l’objectif de simplifier la présence web des indépendants.',
        icon: 'tabler:flag',
      },
      {
        title: '2022 — Industrialisation',
        description: 'Déploiement de nos pipelines automatisés et ouverture de points de présence à Genève et Vevey.',
        icon: 'tabler:arrows-exchange',
      },
      {
        title: '2023 — Accélération',
        description: 'Lancement de notre offre multilingue et partenariats renforcés avec des agences locales.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Où nous rencontrer"
    tagline="Présence locale"
    columns={4}
    items={[
      {
        title: 'Lausanne',
        description: 'Quartier Flon — rendez-vous sur demande',
      },
      {
        title: 'Genève',
        description: 'Rue du Rhône — showroom partenaires',
      },
      {
        title: 'Vevey',
        description: 'Espace de coworking La Forge — sessions onboarding',
      },
      {
        title: 'Montreux',
        description: 'Studios photo partenaires pour vos shootings',
      },
    ]}
  />
</Layout>
