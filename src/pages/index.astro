---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pedro Déménagement — Déménagement rapide en Suisse romande',
  ignoreTitleTemplate: true,
  description: 'Équipe locale, protection du mobilier et planning maîtrisé pour déménager sereinement en Suisse romande.',
};
---

<Layout metadata={metadata}>
  <Hero
    id="process"
    actions={[
      { variant: 'primary', text: 'Obtenir un devis', href: '/contact#form', icon: 'tabler:arrow-right' },
      { text: 'Appeler le +41 21 555 24 24', href: 'tel:+41215552424' },
    ]}
  >
    <Fragment slot="title">Déménagement rapide, efficace et sans stress</Fragment>
    <Fragment slot="subtitle">
      Camions, protections et équipe basés en Suisse romande. Nous planifions, emballons et transportons vos biens avec
      soin, que ce soit pour un appartement, une maison ou un bureau.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-2xl bg-gradient-to-br from-blue-700 via-slate-900 to-slate-800 p-10 text-left text-white shadow-2xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Jour J maîtrisé</p>
        <h4 class="mt-4 text-3xl font-semibold">Planification → Protection → Transport</h4>
        <p class="mt-6 max-w-xl text-lg text-blue-100/90">
          Chef d’équipe dédié, check-list des accès et protections sol/murs pour un déménagement sans surprises.
        </p>
      </div>
    </Fragment>
  </Hero>

  <Note title="Engagement local" description="Entreprise lémanique, assurance RC pro incluse et planning transparent. Nous intervenons entre Genève, Lausanne, Vevey et toute la Suisse romande." />

  <Features
    id="features"
    tagline="Pourquoi nous choisir"
    title="La précision suisse appliquée à votre déménagement"
    subtitle="Une équipe locale, un matériel adapté et une organisation claire pour protéger vos biens."
    items={[
      {
        title: 'Équipe lémanique',
        description: 'Déménageurs basés entre Genève et Lausanne, disponibles en semaine et le samedi.',
        icon: 'tabler:users',
      },
      {
        title: 'Protection du mobilier',
        description: 'Housses, couvertures, sangles et cartons renforcés pour limiter tout risque de casse.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Accès & autorisations',
        description: 'Repérage des parkings, réservations de places et coordination ascenseur/monte-meubles.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Objets lourds',
        description: 'Pianos, frigos américains ou armoires lourdes gérés avec équipements adaptés.',
        icon: 'tabler:armchair',
      },
      {
        title: 'Assurance incluse',
        description: 'Responsabilité civile professionnelle incluse pour chaque intervention.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Suivi unique',
        description: 'Un interlocuteur qui coordonne la date, l’équipe et les éventuels imprévus.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <Content
    isReversed
    tagline="Processus"
    title="Votre déménagement en 3 temps"
    items={[
      { title: 'Préparation & devis', description: 'Visio ou visite express pour estimer le volume, les accès et le matériel nécessaire.' },
      { title: 'Emballage & protection', description: 'Cartons, housses matelas, démontage du mobilier et protection des sols/murs.' },
      { title: 'Transport & installation', description: 'Chargement sécurisé, trajet optimisé, remontage et reprise des protections.' },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Un chef d’équipe dédié</h3>
      Vous savez qui vient, avec quel camion et à quelle heure. Nous validons chaque étape avant le jour J.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-blue-600 via-slate-900 to-slate-800 p-10 text-left text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Planning</p>
        <h4 class="mt-4 text-3xl font-semibold">Rendez-vous confirmé 48h avant</h4>
        <p class="mt-6 max-w-xs text-base text-blue-100/90">
          Check-list d’accès, confirmation du créneau et rappel des points clés.
        </p>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps
    title="Notre accompagnement"
    tagline="Parcours client"
    items={[
      {
        title: '1. Échange rapide',
        description: 'Un appel ou une visio pour comprendre votre logement, vos dates et vos contraintes.',
        icon: 'tabler:phone',
      },
      {
        title: '2. Devis détaillé',
        description: 'Volume estimé, accès, options (emballage, monte-meubles, stockage) et planning.',
        icon: 'tabler:file-description',
      },
      {
        title: '3. Jour J',
        description: 'Arrivée de l’équipe, protection des zones de passage, chargement et transport sécurisé.',
        icon: 'tabler:truck',
      },
      {
        title: '4. Installation',
        description: 'Remontage, mise en place dans les pièces souhaitées et reprise des emballages principaux.',
        icon: 'tabler:home',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Disponibilité</p>
        <p class="mt-6 max-w-xs text-base text-blue-100/90">
          Interventions sur l’Arc lémanique et déplacements longue distance sur demande.
        </p>
      </div>
    </Fragment>
  </Steps>

  <Content
    isAfterContent
    items={[
      { title: 'Zones desservies', description: 'Genève, Lausanne, Vevey, Montreux, Valais et trajets longue distance sur demande.' },
      { title: 'Matériel fourni', description: 'Cartons, housses, adhésif, protections sol/mur, chariots, sangles et couvertures.' },
      { title: 'Options clés', description: 'Démontage/remontage, nettoyage de sortie, stockage temporaire, reprise des cartons.' },
      { title: 'Disponibilité', description: 'Semaine et samedi, créneaux matin ou après-midi selon vos contraintes.' },
    ]}
  >
    <Fragment slot="content">Tout le nécessaire pour un déménagement soigné, sans charge mentale.</Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Prêt pour le jour J</h4>
        <ul class="mt-6 space-y-3 text-left text-blue-100/90">
          <li>✓ Chef d’équipe identifié</li>
          <li>✓ Camion adapté au volume</li>
          <li>✓ Protections et outillage fournis</li>
        </ul>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features2
    id="included"
    title="Options utiles"
    subtitle="Selon votre logement et vos contraintes"
    tagline="Services complémentaires"
    items={[
      { title: 'Emballage & déballage', description: 'Cartons, penderies, protections vaisselle et emballage des objets fragiles.', icon: 'tabler:package' },
      { title: 'Démontage / remontage', description: 'Meubles, lits, armoires et dressing remontés proprement à l’arrivée.', icon: 'tabler:tools' },
      { title: 'Monte-meubles', description: 'Pour les accès étroits ou les étages élevés, avec opérateur dédié.', icon: 'tabler:stairs-up' },
      { title: 'Objets lourds', description: 'Pianos, coffres, frigos américains ou machines sensibles.', icon: 'tabler:weight' },
      { title: 'Stockage temporaire', description: 'Solution de garde-meuble court terme en Suisse romande.', icon: 'tabler:building-warehouse' },
      { title: 'Nettoyage de sortie', description: 'Option ménage de fin de bail pour rendre votre logement en ordre.', icon: 'tabler:broom' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Stats
    title="Repères rapides"
    stats={[
      { title: 'Réponse devis', amount: 'sous 24h' },
      { title: 'Zone', amount: 'Arc lémanique' },
      { title: 'Équipe', amount: '3 à 6 déménageurs' },
      { title: 'Camions', amount: '20–30 m³' },
    ]}
  />

  <FAQs
    id="faq"
    title="Questions fréquentes"
    subtitle="Transparence sur l’organisation et la facture."
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Quel est le délai pour obtenir un devis ?',
        description: 'Nous répondons sous 24h avec un prix indicatif basé sur le volume, les accès et la date souhaitée.',
      },
      {
        title: 'Pouvez-vous emballer pour nous ?',
        description: 'Oui. Nous pouvons fournir cartons, penderies, protections vaisselle et réaliser tout l’emballage/déballage.',
      },
      {
        title: 'Gérez-vous les pianos ou objets lourds ?',
        description: 'Oui, nous utilisons sangles, diables spécifiques et monte-meubles si nécessaire pour sécuriser les objets lourds.',
      },
      {
        title: 'Intervenez-vous le week-end ?',
        description: 'Le samedi est possible selon disponibilité. Pour le dimanche, nous étudions au cas par cas.',
      },
      {
        title: 'L’assurance est-elle incluse ?',
        description: 'Une responsabilité civile professionnelle est incluse. Des couvertures complémentaires sont possibles sur demande.',
      },
    ]}
  />

  <CallToAction
    actions={[
      { variant: 'primary', text: 'Demander un devis', href: '/contact#form', icon: 'tabler:mail-forward' },
      { text: 'Voir les tarifs', href: '/pricing' },
    ]}
  >
    <Fragment slot="title">Prêt à planifier votre déménagement ?</Fragment>

    <Fragment slot="subtitle">
      Expliquez votre volume, vos dates et vos adresses. Nous envoyons une proposition claire avec planning et options.
    </Fragment>
  </CallToAction>
</Layout>
