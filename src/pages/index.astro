---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'MonWebsite.ch — Votre site clé-en-main en 24 h',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    id="process"
    actions={[
      {
        variant: 'primary',
        text: 'Voir les offres',
        href: '/pricing',
        icon: 'tabler:arrow-right',
      },
      { text: 'Parler à un expert', href: '/contact#form' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Interface MonWebsite.ch' }}
  >
    <Fragment slot="title">
      Votre site clé-en-main, livré en <span class="text-accent dark:text-white">24&nbsp;h</span>
    </Fragment>

    <Fragment slot="subtitle">
      Design suisse, performance mondiale. MonWebsite.ch automatise la création de sites vitrines pour les PME et indépendants
      de l'Arc lémanique&nbsp;: contenu, design, hébergement et facturation sont gérés en une journée ouvrable.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Engagement"
    description="Service local, support humain et orchestrations automatisées pour un résultat impeccable sans effort."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Pourquoi nous choisir"
    title="La précision suisse appliquée au digital"
    subtitle="Chaque site est généré, personnalisé et contrôlé par notre équipe pour que vous puissiez vous concentrer sur votre activité."
    items={[
      {
        title: 'Livraison express 24 h',
        description:
          'Brief, contenu, design et mise en ligne sont orchestrés automatiquement pour publier votre site vitrine en une journée ouvrable.',
        icon: 'tabler:clock-hour-4',
      },
      {
        title: 'Design premium sur mesure',
        description:
          'Charte typographique Inter/Montserrat, palettes sobres et animations légères pour un rendu haut de gamme et cohérent.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'SEO local intégré',
        description:
          'Contenus optimisés pour Lausanne, Genève, Montreux et toute la Suisse romande afin de maximiser votre visibilité régionale.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Maintenance automatique',
        description:
          'Sauvegardes, mises à jour et surveillance de performance sont gérées par notre plateforme, sans frais cachés.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Facturation suisse transparente',
        description:
          'Contrats clairs, TVA incluse et paiement en francs suisses via les principaux moyens helvétiques.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Support humain local',
        description:
          'Nos experts basés sur l’Arc lémanique répondent en moins de 2 h ouvrées par téléphone, email ou WhatsApp.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Processus"
    title="Une orchestration en 3 temps"
    items={[
      {
        title: 'Brief structuré',
        description:
          'Un questionnaire ciblé collecte vos services, horaires, témoignages et visuels pour alimenter notre IA propriétaire.',
      },
      {
        title: 'Personnalisation assistée',
        description:
          'Nos designers adaptent les sections, calibrent la typographie et garantissent la conformité aux normes suisses.',
      },
      {
        title: 'Contrôle qualité',
        description:
          'Tests de performance, SEO et accessibilité avant mise en ligne et envoi du rapport de recette.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Votre site prêt demain</h3>
      Trois étapes automatisées, validées par un expert local.
    </Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-blue-600 via-slate-900 to-slate-800 p-10 text-left text-white shadow-xl">
        <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Workflow 24 h</p>
        <h4 class="mt-4 text-3xl font-semibold">Brief → Création → Contrôle</h4>
        <p class="mt-6 max-w-xs text-base text-blue-100/90">
          Chaque étape est tracée dans votre espace client avec notifications en temps réel et validations rapides.
        </p>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

    <Steps
      title="Livraison en 24 h, garantie"
      tagline="Parcours client"
      items={[
        {
          title: 'Signature en ligne',
          description: 'Choisissez votre pack, signez électroniquement et recevez immédiatement votre accès client.',
          icon: 'tabler:edit',
        },
        {
          title: 'Onboarding guidé',
          description: 'Notre assistant collecte vos informations clés et propose une arborescence adaptée à votre métier.',
          icon: 'tabler:clipboard-list',
        },
        {
          title: 'Production automatique',
          description: 'Nos pipelines génèrent le site, intègrent vos contenus et notifient notre équipe pour validation.',
          icon: 'tabler:robot',
        },
        {
          title: 'Mise en ligne & formation',
          description: 'Vous recevez le lien final, le guide vidéo personnalisé et la facture suisse correspondante.',
          icon: 'tabler:rocket',
        },
      ]}
    >
      <Fragment slot="image">
        <div class="relative aspect-[3/4] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
          <p class="text-sm uppercase tracking-[0.35em] text-blue-200/80">Timeline</p>
          <p class="mt-6 max-w-xs text-base text-blue-100/90">
            Chaque étape est suivie dans votre espace client avec validation en temps réel et alertes proactives.
          </p>
        </div>
      </Fragment>
    </Steps>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Contenus multilingues',
        description:
          'Français, anglais ou allemand&nbsp;: nos rédacteurs adaptent les textes pour toucher vos clients où qu’ils soient.',
      },
      {
        title: 'Performances mesurées',
        description:
          'Score Lighthouse ≥ 90 garanti sur mobile et desktop grâce à une optimisation technique avancée.',
      },
      {
        title: 'Intégrations métiers',
        description:
          'Réservation en ligne, Click & Collect, formulaires sécurisés&nbsp;: nous connectons vos outils sans surcoût.',
      },
      {
        title: 'Formation express',
        description:
          'Un guide vidéo personnalisé de 10 minutes pour vous approprier votre site et publier en autonomie.',
      },
    ]}
  >
    <Fragment slot="content">Une présence en ligne qui reflète la précision de votre entreprise.</Fragment>

    <Fragment slot="image">
      <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-gradient-to-br from-slate-900 via-slate-800 to-blue-700 p-10 text-white shadow-xl">
        <h4 class="text-3xl font-semibold">Performances maîtrisées</h4>
        <ul class="mt-6 space-y-3 text-left text-blue-100/90">
          <li>✓ KPI suivis dans votre tableau de bord</li>
          <li>✓ Alertes automatiques en cas de baisse</li>
          <li>✓ Recommandations mensuelles actionnables</li>
        </ul>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    id="included"
    title="Tout est compris"
    subtitle="Une solution clé-en-main pensée pour les entrepreneurs romands"
    tagline="Inclus dans chaque pack"
    items={[
      {
        title: 'Hébergement suisse vert',
        description: 'Serveurs localisés à Genève, alimentés par de l’énergie renouvelable certifiée.',
        icon: 'tabler:server',
      },
      {
        title: 'Emails professionnels',
        description: 'Comptes email @votredomaine.ch configurés et sécurisés avec SPF/DKIM.',
        icon: 'tabler:mail',
      },
      {
        title: 'Suivi analytique',
        description: 'Rapport mensuel automatisé avec les indicateurs clés et recommandations d’optimisation.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Support prioritaire',
        description: 'Canal WhatsApp dédié et hotline locale disponible de 8h à 18h, du lundi au samedi.',
        icon: 'tabler:message',
      },
      {
        title: 'Mises à jour incluses',
        description: 'Sécurité, RGPD et accessibilité contrôlées en continu par nos scripts automatisés.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Séance photo optionnelle',
        description: 'Photographe partenaire à tarif préférentiel sur Lausanne, Vevey ou Genève.',
        icon: 'tabler:camera',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Des résultats concrets pour nos clients"
    stats={[
      { title: 'Sites livrés', amount: '180+' },
      { title: 'Délai moyen', amount: '19h' },
      { title: 'Satisfaction clients', amount: '4.9/5' },
      { title: 'Support en moins de', amount: '2h' },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="faq"
    title="Questions fréquentes"
    subtitle="Transparent de bout en bout, comme votre future présence en ligne."
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Comment garantissez-vous la livraison en 24 h ?',
        description:
          'Nos gabarits sectoriels et notre plateforme d’automatisation préparent 80 % du site. Un expert local finalise et valide avant publication.',
      },
      {
        title: 'Le contenu est-il inclus ?',
        description:
          'Oui, nous rédigeons vos textes en français et pouvons les décliner en anglais ou allemand. Vous pouvez relire avant mise en ligne.',
      },
      {
        title: 'Puis-je gérer moi-même le site après la livraison ?',
        description:
          'Bien sûr. Vous disposez d’un accès éditeur avec guide vidéo et support illimité. Nous restons disponibles pour toute modification.',
      },
      {
        title: 'Quels moyens de paiement acceptez-vous ?',
        description:
          'Cartes suisses, Twint, virement bancaire et facturation QR. Les abonnements peuvent être payés mensuellement ou annuellement.',
      },
      {
        title: 'Proposez-vous des options e-commerce ?',
        description:
          'Nous intégrons des solutions de Click & Collect, vente de bons cadeaux ou catalogue sans panier complet selon vos besoins.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Réserver mon lancement',
        href: '/contact#form',
        icon: 'tabler:calendar-event',
      },
      {
        text: 'Consulter les tarifs',
        href: '/pricing',
      },
    ]}
  >
    <Fragment slot="title">
      Prêt à lancer votre site clé-en-main ?
    </Fragment>

    <Fragment slot="subtitle">
      Un conseiller MonWebsite.ch vous répond dans les 2&nbsp;heures ouvrées pour planifier votre mise en ligne sous 24&nbsp;h.
    </Fragment>
  </CallToAction>
</Layout>
